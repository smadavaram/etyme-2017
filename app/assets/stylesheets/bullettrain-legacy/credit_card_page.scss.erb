// required for this file.
$body-color: #3E4B5B !default;
$body-color-light: #868686;
$brand-primary: #047bf8 !default;
$font-size-base: 0.9rem !default; // Assumes the browser default, typically `16px`
$font-size-h1: 2.5rem !default;
$font-weight-bold: 500 !default;
$font-weight-light: 300;
$global-border-radius: 4px;

.os-container {
  max-width: 1600px;
  margin: 0px auto;
  padding-left: 40px;
  padding-right: 40px;
}

.section-header-w {
  position: relative;
}
.section-header {
  max-width: 700px;
  padding: 100px 0px 70px 0px;
  .section-sub-title {
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  .section-title {
    color: $brand-primary;
    font-size: $font-size-h1 * 1.3;
    margin: 30px 0px;
    margin-top: 10px;
    position: relative;
    &:before {
      content: "";
      width: <%= image_width_for_height('etyme-logo-dark.png', 15) %>px;
      height: 15px;
      background: none;
      background-image: url(image-path('etyme-logo-dark.png'));
      background-size: <%= image_width_for_height('etyme-logo-dark.png', 15) %>px 15px;
      top: -29px;
      left: -52px;
      position: absolute;
    }
    // &:before {
    //   left: -52px;
    //   background-color: lighten($brand-primary, 30%);
    // }
    // &:after {
    //   left: -40px;
    //   background-color: $brand-primary;
    // }
  }
  .section-desc {
    color: $body-color-light;
    font-weight: $font-weight-light;
    font-size: $font-size-base * 1.2;
  }
  &.dark {
    .section-sub-title {
      color: #f8c52a;
    }
    .section-title {
      color: #fff;
      &:before {
        background-image: url(image-path('logo/logo-inverted.png'));
      }
    }
    .section-desc {
      color: rgba(255,255,255,0.6);
    }
  }
}
.section-header-w.centered {
  text-align: center;
  .section-header {
    margin: 0px auto;
    .section-title {
      &:before, &:after {
        width: <%= image_width_for_height('etyme-logo-dark.png', 42) %>px;
        height: 42px;
        background: none;
        background-image: url(image-path('etyme-logo-dark.png'));
        background-size: <%= image_width_for_height('etyme-logo-dark.png', 42) %>px 42px;
        top: -60px;
        left: 50%;
        transform: translateX(-50%);
        border-radius: 0;
      }
