%p= t("devise.mailer.invitation_instructions.hello", email: @employee.email)
%p= t("devise.mailer.invitation_instructions.someone_invited_you", url: root_url)
%p= link_to t("devise.mailer.invitation_instructions.accept"), @link
- if @employee.invitation_due_at
  %p= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@employee.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format'))
%p= t("devise.mailer.invitation_instructions.ignore").html_safe