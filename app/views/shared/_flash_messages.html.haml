- if flash[:alert].present? || flash[:toastr].present? || flash[:error].present? || flash[:errors].present? || flash[:success].present? || flash[:notice].present? || flash[:info].present?
  - if flash[:alert].present?
    :javascript
      amaran_alert('#FFC333',"#{flash[:alert]}");
  - if flash[:error].present?
    :javascript
      amaran_alert('#D04B2B',"#{flash[:error]}");
  - if flash[:errors].present?
    - flash[:errors].each do |e|
      :javascript
        amaran_alert('#D04B2B',"#{e}");
  - if flash[:success].present?
    :javascript
      amaran_alert('#739E73',"#{flash[:success]}");
  - if flash[:notice].present?
    :javascript
      amaran_alert('#80C14B',"#{flash[:notice]}");
  - if flash[:info].present?
    :javascript
      amaran_alert('#35A4DA',"#{flash[:info]}");

