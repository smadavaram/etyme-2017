.content-i
  .content-box
    .element-wrapper
      .element-header.disable_header{:style => "border-bottom: none "}
        %h2.text-center Change Password
        %h6.text-center Log in and get to work.
      .element-box.col-md-6.margin-auto
        .row
          .col-md-9.container.margin-auto
            = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, id: 'new-password-form', class: 'lockscreen animated flipInY'}) do |f|
              = f.hidden_field :reset_password_token
              - flash.each do |key, value|
                = flash_message(key, value)
              = f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', id: "password", required: true, minlength: 6, placeholder: "Enter Password"
              = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', id: "cPassword", required: true, "data-rule-equalTo": "#password", minlength: 6, placeholder: "Confirm Password"
              = f.submit 'Change my password', class: "btn btn-primary pull-right"
