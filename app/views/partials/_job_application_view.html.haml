%table#datatable_fixed_column.table.table-striped.table-bordered.dataTable.no-footer{"aria-describedby" => "datatable_fixed_column_info", :role => "grid", :style => "width: 100%;", :width => "100%"}
  %thead
    %tr{:role => "row"}
      %th Name
      %th Role, Title
      %th Skills
      %th Location
      %th Visa
      %th Recuiter Name
  %tbody
    - job_applications.each do |c|
      %tr
        %td
          = link_to c.user.try(:full_name).try(:titleize),"#","data-content" => "<p class= 'text-center' ><image style='border-radius:50%;' src=#{image_url(c.user.photo)}/></br><div class='well well-sm'>#{c.user.full_name}</br>Email : #{c.user.email} </div></p>", "data-placement" => "top",:rel => "hover"
        %td
          - if c.user.try(:roles).present?
            - c.user.try(:roles).each do |role|
              %span
                .label-info.badge
                  = role.try(:name)
        %td
          - c.user.skills.each do |skill|
            %span
              .label-info.badge.margin-bottom-5
                = skill.name
        %td
          = c.user.try(:location)
        %td
          = c.user.visa
        %td
          - c.user.companies.each do |com|
            %span
              .label-info.badge.margin-bottom-5
                = com.name