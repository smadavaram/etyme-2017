        <% if current_candidate.notifications.unread.count > 0 %>
          <div class="new-messages-count"><%= current_candidate.notifications.unread.count %></div>
        <% end %>
      </div>
      <span class="icon-text">Notification</span>
    </div>



    <!--   END Notifications -->
    <!--------------------START - Messages Link in secondary top menu-------------------->
    <div>
      <div class="messages-notifications os-dropdown-trigger os-dropdown-position-left">
        <a href="<%= candidate_conversations_path %>" target="_blank"><i class="os-icon os-icon-mail-14"></i></a>
