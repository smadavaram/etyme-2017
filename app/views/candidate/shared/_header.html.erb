<div class="top-bar color-scheme-transparent" style="height: 12vh; z-index: 1000;">
  <!--------------------START - Top Menu Controls-------------------->
  <div class="top-menu-controls w-100" style="display: flex; justify-content: flex-end;">


    <!--    bread start-->
    <div class="bread-style">
      <div class="os-icon os-icon-hamburger-menu-1 bread-style1" ></div>
    </div>
    <!--    bread end-->


    <!--    start search-->
    <div class="element-search autosuggest-search-activator">
      <input class="search-div-style" placeholder="Find reports and more" type="text" >
    </div>
    <!--    end search-->

    <!--   START Notifications -->
    <div class="icon-wrapper">
      <div class="messages-notifications os-dropdown-trigger os-dropdown-position-left div-style-1">
        <div  class="div-style-2">
          <a href="<%= notify_notifications_candidates_path(status: "unread", notification_type: "all_notifications") %>"><i class="ti-bell" style="width: 61px; height: 61px;  box-shadow: 0px 4px 15px rgba(255, 0, 0, 0.42); background: rgba(255, 0, 0, 0.61); border-radius: 50px; color: #FFFFFF"></i></a>
          <% if current_candidate.notifications.unread.count > 0 %>
            <div class="new-messages-count"><%= current_candidate.notifications.unread.count %></div>
          <% end %>
        </div>
      </div>
      <span class="icon-text" style="color: black; margin-top: 7px">Notification</span>
    </div>
    <!--   END Notifications -->


    <!--------------------START - Messages Link in secondary top menu-------------------->
    <div>
      <div class="messages-notifications os-dropdown-trigger os-dropdown-position-left div-style-3">
        <div class="div-style-4">
          <a href="<%= candidate_conversations_path %>" target="_blank"><i class="os-icon os-icon-mail-14" style="width: 61px; height: 61px; color: white"></i></a>
        </div>
      </div>
      <span class="icon-text" style="color: black;  margin-top: 7px">Chat</span>
    </div>
    <!--------------------END - Messages Link in secondary top menu-------------------->

    <!--------------------START - Features Link in secondary top menu-------------------->
    <div>
      <div class="top-icon btn-header transparent pull-right open div-style-5" id="quick-add">
        <i class="ti-plus" style="font-size: 22px"></i>
        <ul class="dropdown-menu project-dropdown" style=" background-color: #047bf8;right: 120px !important; left: initial;">
          <li>
            <div style="color: white; font-weight: bold;" class=".sub-title">Timer(s)</div>
            <ul>
              <li>
                <a href="<%= timeline_candidate_contracts_path(cycle_type: "timesheet") %>"><span>Add Timesheets</span></a>
              </li>
            </ul>
          </li>
          <li>
            <div style="color: white; font-weight: bold;" class=".sub-title">Expense(s)</div>
            <ul>
              <li>
                <a href="<%= new_candidate_expense_path(cycle_type: "timesheet") %>"><span>Request Expenses</span></a>
              </li>
            </ul>
          </li>
        </ul>
      </div>
      <span class="icon-text" style="color: black;"><label style="margin-top: 10px">Add</label></span>
    </div>

    <!--------------------END - Features Link in secondary top menu-------------------->


    <!--------------------START - User Link in secondary top menu-------------------->
    <div class="top-icon mobile-user-icon top-settings os-dropdown-trigger os-dropdown-position-left"  style= "margin-bottom: 15px;">
      <div class="logged-user-w" style="padding-left: 0px; padding-right: 0px;">
        <div class="logged-user-i">
          <div class="div-style-8 div-style-6" >
            <%= link_to my_profile_path do %>
              <%= user_image(current_candidate, class: 'data-table-image mr-2 div-style-7', title: "#{current_candidate.full_name}") %>
            <% end %>
          </div>
          <div class="os-dropdown">
            <div class="icon-w">
              <i class=""></i>
            </div>
            <%= link_to "", destroy_candidate_session_path, method: :delete, class: 'hidden', id: 'logout-hidden' %>
            <ul>
              <li>
                <%= link_to(destroy_candidate_session_path, title: 'Sign Out', data: {action: 'userLogout', 'logout-msg' => 'You can improve your security further after logging out by closing this opened browser'}) do %>
                  <i class="os-icon os-icon-signs-11"></i>
                  <span>Logout</span>
                <% end %>
              </li>
              <li>
                <a href="<%= onboarding_profile_path %>">
                  <i class="os-icon os-icon-user-male-circle2"></i>
                  <span>Onboarding</span>
                </a>
              </li>
              <li>
                <a href="<%= my_profile_path %>">
                  <i class="os-icon os-icon-user-male-circle2"></i>
                  <span>Profile</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!--------------------END - User Link in secondary top menu-------------------->



  </div>
  <!--------------------END - Top Menu Controls-------------------->
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

