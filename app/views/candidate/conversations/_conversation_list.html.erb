<% chat_user_data = set_company_chat_user_data(con, usr) %>
<%= link_to  candidate_conversations_path(conversation: con.id), class: "user-w", remote: true, method: :post do %>
  <div class="avatar with-status status-green">
    <%= user_image(usr, style: 'width: 35px; height: 35px;', class: 'data-table-image mr-1',title: "#{usr.full_name}" )
%>
  </div>
  <div class="user-info">
    <div class="user-date"><%= chat_user_data[:last_msg_time] %></div>
    <div class="user-name"><%= usr.full_name %></div>
    <div class="last-message"><%= chat_user_data[:last_msg] %></div>
  </div>
<% end %>

<% if current_candidate.favourables.where(favourabled_id: usr.id, favourabled_type: usr.class.to_s).present? %>
  <a class="fav-btn fa fa-star"></a>
<% else %>
  <%= link_to "", add_to_favourite_candidate_conversations_path(favourabled_id: usr.id, favourabled_type: usr.class.to_s), class: "fav-btn fa fa-star-o", remote: true %>
<% end %>