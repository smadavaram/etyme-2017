.row{style: "padding: 15px;"}
  .form-group
    = form_for @user,url: candidate_candidate_path(@user.id, tab: "skill"),method: :put do |f|
      %h2{style: "margin: 15px 0"}
        %b Update Skills
      .row
        .col-md-4
          .form-group
            = text_field_tag :name,'',placeholder: "Category",class: 'form-control'
        .col-md-4
          .form-group
            = text_field_tag :subcat,'',placeholder: "Subcategory",class: 'form-control'
      .row
        .col-md-8
          .form-group
            = f.text_field :skill_list,placeholder: "Add Skills Comma seperated",class: 'form-control', 'data-role'=>'tagsinput',value: current_candidate.skill_list.join(", ")
        .col-md-4
          .form-group
            = text_field_tag :subcat,'',placeholder: "Subcategory",class: 'form-control'
      .row
      .col-lg-12
        %button.btn.pull-left{:type => "button"}
          Back
        %button.btn.btn-primary.pull-right{:type => "button", style: "margin-left: 20px"}
          Next
        %button.btn.btn-primary.pull-right{:type => "submit"}
          Saved