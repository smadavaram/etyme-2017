.row.multi-field-container.nested-fields3
  .col-sm-3
    .form-group
      %label Title
      = f.text_field :title, placeholder: "Title",class: 'form-control input'

  .col-sm-2
    .form-group
      %label Expiry Date
      = f.text_field :exp_date,placeholder: "YYYY-MM-DD",class: 'form-control p_date education_doc_expiry_date p-location input'

  .col-sm-5
    %label.d-block Select Document
    - slug = SecureRandom.hex(5)
    .file_selector{style: "display: flex;"}
      .form-group.d-inline-block
        = render 'shared/file_attachement',f:f,attr_name: :file,button_name: "Document", name_selector: ".#{slug}",cstm_style: "border-radius: 0; height:38px;", required_field: false
      %p.d-inline-block.uploaded_file_name{class: slug}= f.object&.file.present?  ? File.basename(f.object.file) : "No File Selected"
