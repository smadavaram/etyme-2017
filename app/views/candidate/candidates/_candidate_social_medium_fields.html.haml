.nested-fields4
  .row
    .col-sm-5
      .form-group
        %label Social Media Name
        = f.text_field :social_media_name, placeholder: "Social Media Name",class: 'form-control'

    .col-sm-5
      .form-group
        %label Social Media Link
        = f.text_field :social_media_url, class: 'form-control', placeholder: "Social Media Link"

    .col-sm-2
      .form-group
      = link_to_remove_association f , wrapper_class: "nested-fields4", class: "bttn btn-add delete_icon" do
        %i.fa.fa-trash