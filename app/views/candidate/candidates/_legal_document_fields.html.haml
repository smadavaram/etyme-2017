.multi-field-container
  .row
    .col-sm-6
      .form-group
        %label Title
        = f.text_field :title, placeholder: "Title",class: 'form-control p-location input'

    .col-sm-4
      .form-group
        %label Expiry Date
        = f.text_field :exp_date,placeholder: "YYYY-MM-DD",class: 'form-control legal_doc_exp_date input'

        / = filepicker_field_tag "" ,class: "resume_file", onchange:"uploadResume(event)"
    .col-sm-2
      .form-group
        %label Select Document
        = f.text_field :file, class: 'hidden'
        = filepicker_field_tag "" , class: "hidden legal_document_file filepicker-attach", onchange:"uploadLegalDoc(event, $(this).prev())"
        = link_to "Select Document" ,"#",class: 'col-lg-12 legal_document_doc btn btn-md btn-primary', style: "margin-bottom: 10px", onclick:"select_legal_file($(this).prev())"



  / .row
  /   .col-md-12
  /     %a.bttn.btn-add.remove-multi-fields.pull-right.delete_icon
  /       %i.fa.fa-trash
- content_for :scripts do
  :javascript  

    function select_legal_file(prev){
      prev.trigger("click");
    }  

    function uploadLegalDoc(event, file_el){
      document_url = event.fpfile.url
      $("#"+file_el.attr("id")).val(document_url)
    }        