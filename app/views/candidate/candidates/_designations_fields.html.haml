.nested-fields7{style: "margin-bottom: 10px;"}
  .multi-field-container{style: "border: 2px solid lightgray; padding: 0 13px;margin-bottom: 15px;"}
    .row
      .col-md-12{style: "padding-top: 10px;"}
        = render 'candidate/candidates/partials/gallery_form', f: f, reference: 'designation'
    .row
      .col-md-12
        .multi-field-container.nested-fields5.client-fields
          %h4.element-header
            Employer History
      .row{style: "padding: 0 20px;"}
        .col-md-12
          .form-group
            %label Company Name
            = f.text_field :comp_name, placeholder: "Company Name",class: 'form-control  input'
        .col-md-12
          .row
            .col-md-6
              .form-group
                %label Company Designation
                = f.text_field :company_role, placeholder: "Company Designation",class: 'form-control  input'
            .col-md-6
              .form-group
                %label Company Location
                = f.text_field :location, placeholder: "Company Location",class: 'form-control  input'
        .col-md-12
          .row
            .col-md-6
              .form-group
                %label Start Date
                = f.text_field :start_date, placeholder: "Start Date",class: 'form-control p_date input'
            .col-md-6
              .form-group
                %label End Date
                = f.text_field :end_date, placeholder: "End Date",class: 'form-control p_date input'
      .col-md-12
        = render 'candidate/candidates/partials/client_reference', f: f, reference: 'client_reference'
      .col-md-12
        = render 'candidate/candidates/partials/designation_project', f: f, reference: 'designation_project'


  .row
    .col-md-12
      = link_to_remove_association f , wrapper_class: "nested-fields7", class: "bttn btn-add pull-right delete_icon" do
        %i.fa.fa-trash

