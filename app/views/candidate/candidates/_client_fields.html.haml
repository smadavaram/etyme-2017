.row.multi-field-container{style: "padding: 0px 15px 15px 15px;"}
  .row
    .col-sm-3
      .form-group
        %p Name
        = f.text_field :name,placeholder: "Client Name",class: 'form-control p-location input'

    .col-sm-3
      .form-group
        %p Industry
        = f.select :industry, industry_list,{},{class: 'form-control p-location input'}
    .col-sm-3
      .form-group
        %p Start Date
        = f.text_field :start_date,placeholder: "MM/DD/YY",class: 'form-control education_start_year p-location input'
    .col-sm-3
      .form-group
        %p End Date
        = f.text_field :end_date,placeholder:"MM/DD/YY",class: 'form-control education_completion_year p-location input'

  .row
    .col-sm-3
      .form-group
        %p Refrence name
        = f.text_field :refrence_name,placeholder: "Degree level",class: 'form-control p-location input'

    .col-sm-3
      .form-group
        %p Refrence Phone
        = f.text_field :refrence_phone, class: 'form-control p-location input'
    .col-sm-3
      .form-group
        %p Refrence Email
        = f.text_field :refrence_email,placeholder: "Email",class: 'form-control p-location input'


  .row
    .col-md-6
      .form-group
        %p Project Description
        = f.text_area :project_description,placeholder: "Project Description",class: 'form-control p-location input'
    .col-md-6
      .form-group
        %p Role
        = f.text_area :role,placeholder: "My Role",class: 'form-control p-location input'
 

  .row
    .col-md-12
      %a.bttn.btn-add.remove-multi-fields.pull-right.delete_icon
        %i.fa.fa-trash
