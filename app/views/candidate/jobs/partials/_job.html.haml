- jobs.each_with_index do |job , index|
  %tr
    %td
      =link_to job.title,candidate_job_path(job)
    %td= job.end_date
    %td= job.location.name  rescue "  --"
    %td= job.created_by.full_name  rescue "  --"
    %td
      -#= link_to raw("<i class='fa fa-pencil '></i>") , edit_job_path(job) , class: 'btn btn-xs btn-default btn-primary'
      -#= link_to raw("<i class='fa fa-times '></i>") , job_path(job) , method: :delete ,  class: 'btn btn-xs btn-default btn-danger'
      = link_to 'Apply' ,send_invitation_job_path(job) , method: :post ,remote: true,class: 'btn btn-xs btn-default btn-success'