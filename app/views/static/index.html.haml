        .progress.transparent.progress-small.no-radius
          .progress-bar.progress-bar-black.animated-progress-bar{"data-percentage" => "79%"}
        / /.progress
      / /.col-lg-3
      .col-lg-3.col-sm-6.pro
        %h5 Jobs Completed
        %h1
          %span.number-animator{"data-animation-duration" => "800", "data-value" => "14000"} 0
        .progress.transparent.progress-small.no-radius
          .progress-bar.progress-bar-black.animated-progress-bar{"data-percentage" => "85%"}
        / /.progress
      / /.col-lg-3
      .col-lg-3.col-sm-6.pro
        %h5 Payed To Freelancers
        %h1
          %i.fa.fa-usd
          %span.number-animator{"data-animation-duration" => "800", "data-value" => "500K"} 0
        .progress.transparent.progress-small.no-radius
          .progress-bar.progress-bar-black.animated-progress-bar{"data-percentage" => "85%"}

