  <script>
    function showReviewModal() {
      $('#add-review').modal('show');
    }

    $('.portfolio-slick').slick({
      infinite: true,
      slidesToShow: 1,
      dots:true,
      arrows: true,
      speed: 500,
      fade: true,
    });
  </script>
<% end %>

<script>
    $(".openbtn").click(function() {
        $(".side-wrapper").toggleClass("side-active")
    });
