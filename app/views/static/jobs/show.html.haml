- content_for :html_id, "extr-page"
-content_for :top_right do
  - if candidate_signed_in?
    %span#extr-page-header-space
      =  current_candidate.full_name.titleize
      %span.hidden-mobile.hiddex-xs
      = link_to 'Log out', destroy_candidate_session_path, method: :delete, class: 'btn btn-danger'
  -else
    %span#extr-page-header-space
      = link_to 'Need an account?',new_candidate_registration_path
      %span.hidden-mobile.hiddex-xs
      = link_to 'Sign In', new_candidate_session_path, class: 'btn btn-danger'

.container
  .col-sm-12.animated.fadeInRightBig
    %section.panel.mt-20s
      %header.panel-heading
        -#%a.pull-right.btn.btn-primary.right.mt-12{href:"#",}  Apply Now
        %h1= @job.title
        - @job.tags.each do |tag|
          %span.h4.badge
            =tag.name
      %ul.ul-s
        %li.list-group-item.list-p-15
          %span.text-muted Detail
          =raw(@job.description)
          .row
            .col-lg-3.col-md-3
              %span.text-muted.fs-13 Location
              %b
                = @job.location.titleize if @job.location.present?
            .col-lg-3.col-md-3
              %span.text-muted.fs-13 Category
              %b
                = @job.job_category
            .col-lg-3.col-md-3
              %span.text-muted.fs-13 Date / End
              %b
                = @job.start_date.to_s + "   /   "
                = @job.end_date.to_s
            .col-lg-3.col-md-3
              %span.text-muted.fs-13 Company
              %b
                = @job.company.name