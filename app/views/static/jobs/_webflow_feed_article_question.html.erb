<!-- webflow_feed_article_question -->
<div class="feed-article feed-blog-item col-12 px-0">
    <div class="d-flex align-items-start">
      <div class="width-100 mx-0 mx-sm-2">
        <div class="thumb-100 thumb-xs-80" >
          <% if job&.files.present? %>
            <%= image_tag(job.files) %>
          <% elsif job.tags.present? %>
            <div class="text-image text-image-font">
              <%= job.tags.first %>
            </div>
          <% elsif job.company&.logo.present? %>
            <%= image_tag(job.company.logo) %>
          <% elsif job.company&.name.present? %>
            <div class="text-image text-image-font">
              <%= job.company.name.split.first %>
            </div>
          <% else %>
            <%= image_tag 'static-job.png' %>
          <% end %>
        </div>
      </div>
      <div class="pl-1 pr-1 flex-fill">
        <div class="col-12 px-0">
          <h5 class="feed-article-title">
            <%= link_to truncate(job.title, length: 50), static_job_path(job, type: 'feed'), class: "font-weight-bold" %>
          </h5>
          <div class="feed-article-description">
            <%= truncate(strip_tags(job.description), length: 200) if job.description.present? %>
          </div>

          <div class="row align-items-center">
            <div class="col-12 mb-2 mb-xl-0">
              <div class="row align-items-center no-gutters">
                <div class="col-6">
                  <div class="media">
                    <div class="media-body align-self-center">
                      <% if job.created_by&.photo.present? %>
                        <%= image_tag(job.created_by&.photo, class: "user-avatar") %>
                      <% elsif job.created_by&.first_name.present? %>
                        <div class="user-avatar-text">
                          <%= job.created_by.first_name.first.capitalize %>
                        </div>
                      <% else %>
                        <%= image_tag('default_user.png', class: "user-avatar") %>
                      <% end %>
                      <h5 class="feed-article-author d-inline vertical-sub hidden-xs">
                        <%= job.company&.name || job&.created_by_candidate&.full_name || job&.created_by&.full_name %>
                      </h5>
                      <h5 class="feed-article-author d-inline vertical-sub show-xs">
                        <%=
                          truncate(job.company&.name, length: 10) ||
                              truncate(job&.created_by_candidate&.full_name, length: 10) ||
                              truncate(job&.created_by&.full_name, length: 10)
                        %>
                      </h5>
                    </div>
                  </div>
                </div>
                <div class="col-6 col-md-6 d-flex my-2 text-right">
                  <div class="col-12 text-lg-right align-self-end p-0">
                    <div class="d-flex align-items-center">
                      <ul class="list-unstyled ml-auto mb-0">
                        <li>
                          <p class="feed-article-time font-xs-9">
                            <span class="hidden-xs d-inline-block">Posted</span>
                            <span class="d-inline-block"><%= "#{time_ago_in_words(job.created_at)} ago" %></span>
                          </p>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row align-items-center no-gutters">
                <div class="col-5">
                  <small><%= link_to "#{job.comments.size} comments", static_job_path(job, type: 'feed') %></small>
                </div>
                <div class="col-7 d-flex justify-content-end">
                  <% if current_company.owner == current_user %>
                    <small class="mr-2"><%= link_to 'Delete', job, method: 'delete', class: 'text-danger' %></small>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
<!-- ./webflow_feed_article_question -->
