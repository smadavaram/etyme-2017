<% @job_all.each do |job| %>
  <!-- Feed Blocks Start -->
  <div class="feed-article col-12 px-0">
    <div class="d-flex">
      <div class="width-100 mx-0 mx-sm-3">
        <div class="thumb-100 thumb-xs-80">
          <% if job&.files.present? %>
            <%= image_tag(job.files) %>
          <% elsif job.tags.present? %>
            <div class="text-image text-image-font">
              <%= job.tags.first %>
            </div>
          <% elsif job.company&.logo.present? %>
            <%= image_tag(job.company.logo) %>
          <% elsif job.company&.name.present? %>
            <div class="text-image text-image-font">
              <%= job.company.name.split.first %>
            </div>
          <% else %>
            <%= image_tag 'static-job.png' %>
          <% end %>
        </div>
      </div>
      <div class="pl-1 pr-md-3 d-flex flex-column justify-content-between flex-fill">
        <div class="row justify-content-between">
          <div class="col-12 col-md-6 col-lg-7 text-md-left d-flex align-self-center">
            <h3 class="feed-article-title mb-0">
              <%= link_to truncate(job.title, length: 35), static_job_path(job, type: 'job'), class: "font-weight-bold" %>
            </h3>
          </div>
          <% if job.job_category.present? %>
            <div class="hidden-xs col-12 col-md-6 col-lg-5 text-center text-md-right">
              <div class="col-12 p-0">
                <ul class="list-unstyled m-0">
                  <li class="d-inline-block">
                      <span class="feed-article-category">
                        <%= job&.job_category %>
                      </span>
                  </li>
                </ul>
              </div>
            </div>
          <% end %>
        </div>
        <div class="row justify-content-between">
          <div class="col-6 col-md-6 col-lg-4 my-2 my-md-0">
            <ul class="list-unstyled m-0 p-0">
              <li class="d-block">
                <% if job.created_by&.photo.present? %>
                  <%= image_tag(job.created_by&.photo, class: "user-avatar") %>
                <% elsif job.created_by&.first_name.present? %>
                    <div class="user-avatar-text">
                      <%= job.first.created_by.first_name.first.capitalize %>
                    </div>
                <% else %>
                    <%= image_tag('default_user.png', class: "user-avatar") %>
                <% end %>
                <h5 class="feed-article-author d-inline vertical-sub hidden-xs">
                  <%= job.company&.name || job&.created_by_candidate&.full_name || job&.created_by&.full_name %>
                </h5>
                <h5 class="feed-article-author d-inline vertical-sub show-xs">
                  <%=
                    truncate(job.company&.name, length: 10) ||
                        truncate(job&.created_by_candidate&.full_name, length: 10) ||
                        truncate(job&.created_by&.full_name, length: 10)
                  %>
                </h5>
              </li>
              <% if job.location.present? %>
                <li class="d-block">
                  <p class="feed-article-location font-size-13 font-weight-bold">
                    <%#= image_tag 'placeholder.svg', class: "img-fluid w-15 mr-2", alt: "placeholder" %>
                    <%= job&.location %>
                  </p>
                </li>
              <% end %>
              <% if current_company&.owner == current_user %>
                <li class="d-block">
                  <p class="feed-article-time">
                    <small class="mr-3"><%= link_to 'Delete', job, method: 'delete', class: 'text-danger' %></small>
                  </p>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="col-6 col-lg-8 d-flex my-2 text-right">
            <div class="col-12 text-lg-right align-self-end p-0">
              <div class="d-flex align-items-center">
                <ul class="list-unstyled ml-auto mb-0">
                  <li class="d-inline-block mb-0">
                    <% if job&.listing_type.present? && job&.listing_type == "Training" %>
                        <span class="feed-article-btn-apply">
                          <%= link_to "View", static_job_apply_path(job, status: candidate_signed_in?), method: :post, remote: true, data: {trigger_modal: true} %>
                        </span>
                    <% elsif job&.listing_type.present? && job&.listing_type == "Service" %>
                        <span class="feed-article-btn-apply">
                          <%= link_to "View", static_job_apply_path(job, status: candidate_signed_in?), method: :post, remote: true, data: {trigger_modal: true} %>
                        </span>
                    <% elsif job&.listing_type.present? && job&.listing_type == "Product" %>
                        <span class="feed-article-btn-apply">
                          <%= link_to "Buy", static_job_apply_path(job, status: candidate_signed_in?), method: :post, remote: true, data: {trigger_modal: true} %>
                        </span>
                    <% else %>
                        <span class="feed-article-btn-apply">
                          <% if current_candidate.present? && current_candidate.already_applied?(job.id) %>
                            Applied
                          <% else %>
                            <%= link_to "Apply", static_job_apply_path(job, status: candidate_signed_in?), method: :post, remote: true, data: {trigger_modal: true} %>
                          <% end %>
                        </span>
                    <% end %>
                  </li>
                  <li>
                    <p class="feed-article-time font-xs-9">
                      <span class="hidden-xs d-inline-block">Posted</span>
                      <span class="d-inline-block"><%= "#{time_ago_in_words(job.created_at)} ago" %></span>
                    </p>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Feed Blocks End -->
<% end %>
