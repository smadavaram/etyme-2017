<!-- Training, Service and Product feed blocks start -->
<div class="feed-article col-12 px-0">
    <div class="d-flex">
      <div class="width-100 mx-0 mx-sm-2">
        <div class="thumb-100 thumb-xs-80" >
          <% if job&.files.present? %>
            <%= image_tag(job.files) %>
          <% elsif job.created_by&.photo.present? %>
            <%= image_tag(job.created_by&.photo) %>
          <% else %>
            <div class="feed-blank-thumb-100">&nbsp;</div>
          <% end %>
        </div>
      </div>
      <div class="pl-1 pr-1 d-flex flex-column justify-content-between flex-fill">
        <div class="row justify-content-between">
          <div class="col-12 col-md-6 col-lg-7 text-md-left d-flex align-self-center">
            <h3 class="feed-article-title">
              <%= link_to truncate(job.title,length: 50) ,static_job_path(job, type: 'feed')%>
            </h3>
          </div>
          <% if job.job_category.present? %>
            <div class="hidden-xs col-12 col-md-6 col-lg-5 text-right">
              <div class="col-12 p-0">
                <ul class="list-unstyled m-0">
                  <li class="d-inline-block">
                    <span class="feed-article-category">
                      <%= job&.job_category %>
                    </span>
                  </li>
                </ul>
              </div>
            </div>
          <% end %>
        </div>
        <div class="row">
          <div class="col-12 feed-article-description pb-2">
            <%= truncate(strip_tags(job.description), length: 200) if job.description.present? %>
          </div>
        </div>
        <div class="row align-items-center">
          <div class="col-12 mb-2 mb-xl-0">
            <div class="row align-items-center no-gutters">
              <div class="col-12 col-md-6 col-lg-4 my-1 my-md-0">
                <ul class="list-unstyled m-0 p-0">
                  <li class="d-block">
                    <p class="feed-article-author">by <%= job.created_by_candidate&.full_name || job.created_by&.full_name %></p>
                  </li>
                  <% if job.location.present? %>
                    <li class="d-block">
                      <p class="feed-article-location">
                        <%= image_tag 'placeholder.svg' ,class: "img-fluid w-15 mr-2", alt: "placeholder" %>
                        <%= job&.location %>
                      </p>
                    </li>
                  <% end %>
                  <li class="d-block">
                    <p class="feed-article-time">
                      <%= image_tag 'clock.svg', class: "img-fluid w-15 mr-2", alt: "clock" %>
                      <%= "#{time_ago_in_words(job.created_at)} ago" %>
                    </p>
                  </li>
                </ul>
              </div>
            </div>
            <div class="row d-flex justify-content-between mt-1">
              <div class="col-5">
                <small><%= link_to "#{job.comments.size} comments", static_job_path(job, type: 'feed') %></small>
              </div>
              <div class="col-7 d-flex justify-content-end">
                <% if current_company.owner == current_user %>
                  <small class="mr-2"><%= link_to 'Delete', job, method: 'delete', class: 'text-danger' %></small>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <%#= render 'webflow_feed_article_apply_button', job: job %>
      </div>
    </div>
</div>
<!-- Feed Blocks End -->
