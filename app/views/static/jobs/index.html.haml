- content_for :html_id, "extr-page"
-content_for :top_right do
  - if candidate_signed_in?
    %span#extr-page-header-space
      =  current_candidate.full_name.titleize
      %span.hidden-mobile.hiddex-xs
      = link_to 'Log out', destroy_candidate_session_path, method: :delete, class: 'btn btn-danger'
  -else
    %span#extr-page-header-space
      = link_to 'Need an account?',new_candidate_registration_path
      %span.hidden-mobile.hiddex-xs
      = link_to 'Sign In', new_candidate_session_path, class: 'btn btn-danger'

#content
  .row
    .col--12
      - @jobs.each do |job|
        .col-sm-3.animated.fadeInLeftBig
          .panel
            %section.panel.b-light.text-center{style:"border-color:thistle height: 100%"}
              %header.panel-heading.bg-color-white{:style => "display: table; width: 100%; height: 100%;"}
                %h3.equal-height
                  = job.title
                  %br
                  %span.h4.text-muted
                    = job.job_category
                %ul.list-group
                  %li.list-group-item
                    %p.h4
                      = job.company.name.titleize
                  %li.list-group-item.text-muted.text-center{:style => "text-align: justify; font-size: 14px; height: 140px;"}
                    = truncate(strip_tags(job.description),length: 200)
                .pannel-footer.b-light.links{:style => ""}
                  = link_to 'Apply',candidate_signed_in? ? static_job_apply_path(job,status:true)  : static_job_apply_path(job,status: false) ,method: :post,remote: true ,class: "btn btn-primary size #{current_candidate.present? ?  (current_candidate.job_applications.find_by_job_id(job.id).present? ? 'disabled' : " ") :''  } "
                  = link_to 'View Detail',static_job_path(job),class: 'btn btn-primary size'




