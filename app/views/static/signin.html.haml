%body
  %header.header-login
    .container
      .content
        .row
          %h1.revealOnScroll{"data-animation" => "fadeInDown"}
            %i.fa.fa-coffee
            Company Login
          %p Log in and get to work.
  %section.banner-login
    .container
      .row
        %main.main.main-signup.col-lg-12
          .col-lg-6.col-lg-offset-3.text-center
            .form-sign
              %form.lockscreen.animated.flipInY{method: 'post' , url: signin_path}
                .form-head
                  %h3 Sign in to your team
                / /.form-head
                .form-body
                  .form-row
                    .form-controls
                      %input.field{:name => "domain", :placeholder => "Enter Your Domain", :type => "text"}/
                .form-foot
                  .form-actions
                    %input.form-btn{:type => "submit", :value => "Continue"}/
                  / /.form-actions
                  .form-head
                    = link_to 'Are Already Signup there?', new_candidate_password_path ,class: "more-link"
