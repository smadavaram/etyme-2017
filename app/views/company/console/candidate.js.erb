$("#matched-jobs").html("<%= j render "company/console/partials/matched_jobs" %>");

function search_and_render(){
  var candidate_id = $('#candidate_id').val();
  var search_term = $('#search').val();
  $.get(`/company/console/candidates/${candidate_id}?q=${search_term}`);
}

function apply(obj){
  var job_id = $(obj).attr('data-job-id');
  var candidate_id = $('#candidate_id').val();
  console.log('candidate id: ', candidate_id, 'job_id: ', job_id);
  let url = `/company/console/jobs/${job_id}`;
  $.ajax({
      type: "POST",
      url: url,
      data: {temp_candidates: [candidate_id]},
      dataType: 'script',}
    ).done(function (data) {
    flash_success("Applied Successfully");
    $.get(`/company/console/candidates/${candidate_id}`);
  }).fail(function (data) {
    flash_error(data.status)
  });
}
