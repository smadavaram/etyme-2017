%fieldset
  .form-group
    %label.control-label.col-md-2
      First Name
      %span{:style => "color:red;"} *
    .col-md-8
      .row
        .col-sm-12
          .input-icon-left
            %i.fa.txt-color-green
            = e.text_field :first_name, class: "form-control  input-md", placeholder:"First Name", required: true
  .form-group
    %label.control-label.col-md-2
      Last Name
      %span{:style => "color:red;"} *
    .col-md-8
      .row
        .col-sm-12
          .input-icon-left
            %i.fa.txt-color-green
            = e.text_field :last_name, :class=>"form-control  input-md", placeholder:"Last Name", required: true
  .form-group
    %label.control-label.col-md-2
      SSN
      %span{:style => "color:red;"} *
    .col-md-8
      .row
        .col-sm-12
          .input-icon-left
            %i.fa.txt-color-green
            = e.text_field :ssn, :class=>"form-control  input-md", placeholder:"SSN Number", required: true
  .form-group
    %label.control-label.col-md-2
      DOB
      %span{:style => "color:red;"} *
    .col-md-8
      .row
        .col-sm-12
          .input-icon-left
            %i.fa.txt-color-green
            = e.text_field :dob, :class=>"form-control  input-lg", placeholder:"Date of Birth", required: true
  .form-group
    %label.control-label.col-md-2
      Email
      %span{:style => "color:red;"} *
    .col-md-8
      .row
        .col-sm-12
          .input-icon-left
            %i.fa.txt-color-green
            = e.email_field :email, class: "form-control  input-md", placeholder:"email@address.com",disabled: "disabled" , required: true
  .form-group
    %label.control-label.col-md-2
      Photo
      %span{:style => "color:red;"} *
    .col-md-8
      .row
        .col-sm-3
          .input-icon-left
            %i.fa.txt-color-green

            = e.filepicker_field :photo, class: "form-control  input-lg"
  .form-group
    %label.control-label.col-md-2
      Phone
      %span{:style => "color:red;"} *
    .col-md-8
      .row
        .col-sm-12
          .input-icon-left
            %i.fa.txt-color-green
            = e.text_field :phone, :class=>"form-control  input-md", placeholder:"+1", required: true
        -#= e.text_field :phone , class: 'form-control input-lg' , id: 'fname' , "data-mask" => "+99 (999) 999-9999", "data-mask-placeholder" => "X", :placeholder => "+1", required: true
  .form-group
    %label.control-label.col-md-2
      Gender
      %span{:style => "color:red;"} *
    .col-md-8
      .row
        .col-sm-12
          .input-icon-left
            %i.fa.txt-color-green
            = e.select :gender, [['Male','0'],['Female','1']], {}, {:class=>"form-control input-lg"}
%legend