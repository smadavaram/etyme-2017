%h4
  I attest to the best of knowledge that the information provided by me in this set up is correct and up to date. I also accept the terms and conditions set by Etyme.
.sigPad
  %ul.sigNav{:style => "width: 290px;"}
    %li.clearButton
      %a{:href => "#clear", :style => "color:#ccc;"} Clear
  .sig.sigWrapper{:style => "border-color:#CCC;height: 100px;width: 290px;"}
    %canvas.pad{:height => "98", width: "286"}
    = f.hidden_field :signature, class: "output signature"
  -#= succeed "," do
    -#%input#name.name.input-lg.signature-name{:disabled => "disabled", :type => "text"}/
  %div{:style => "width: 290px; position: relative;margin-bottom: 40px;margin-top: -19px"}
    %p.text-muted{:style => "font-size: 10px;width: 50%;left: 0; position: absolute;"} Please sign above.
    %p.text-muted{:style => "font-size: 10px;right: 0; position: absolute;"}= Date.today

- content_for :scripts do
  :javascript
    $( document ).ready(function() {
      $('.sigPad').signaturePad({drawOnly:true});
    });

:css
  button[disabled], html input[disabled]{

  }
  .signature-name{
      border-width: 0 0 1px;
      border: 0px!important;
      border-bottom: 1px solid #CCC!important;
      margin-bottom: 30px!important;
      margin-top: 10px;
      padding: 5px;
      width: 290px!important;
      outline: none!important;
      border-radius: 0px!important;
      font: inherit!important;
      position: sticky!important;
      background: transparent!important;
      text-align: center;
      color: #979797;
      font-size: 28px!important;
      font-style: italic!important;
  }
  .signature-name:foucs{
      outline: none!important;
      border: 0px!important;
      box-shadow: 0px!important;
  }
  .sigNav a.current, .sigNav a.current:link, .sigNav a.current:visited {
      border-radius: 2px 2px 0 0!important;
      border: 1px solid #ccc!important;
      border-bottom: 0px!important;
      color: #888!important;
      font-weight: 300!important;
      text-decoration: none!important;
      background: #f7f7f7!important;
      padding: 0 20px!important;
  }

  .sigNav a, .sigNav a:link, .sigNav a:visited {
      color: #888!important;
      font-weight: 300!important;
  }
