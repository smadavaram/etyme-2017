.content-i
  .content-box
    .row
      .col-sm-12
        .element-wrapper
          .element-box-tp
            .controls-above-table
              .row.mr-1.ml-1
                .col-sm-6
                .col-sm-6
                  .form-inline.justify-content-sm-end
                    %input.form-control.form-control-sm.rounded.bright{placeholder: "Search", type: "text", type: 'search', id: 'application-datatable-search'}
            .table-responsive
              %table#application-datatable.table.text-center.table-bordered.table-lg.table-v2.table-striped{"data-source" => "#{search_job_applications_path(format: :json)}"}
                %thead
                  %tr
                    %th
                      %input{ type:"checkbox", name:"select_all", id:"example-select-all"}
                    %th Name
                    %th Application Number
                    %th Title
                    %th Status
                    %th Type
                    %th Actions
                %tbody


-content_for :scripts do
  :javascript
    $(document).ready(function(){
      $('#application-datatable-search').keyup(function(){
        $('#application-datatable').DataTable().search( $(this).val() ).draw();
      })
    })
