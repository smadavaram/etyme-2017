.modal.fade.in{ id: "share_application_#{job_application.id}","aria-hidden": "true", "aria-labelledby": "myModalLabel", :role => "dialog", :style => "display: none;", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"}
          Ã—
        %h2#myModalLabel.modal-title
          %strong Share Application - #{job_application.job.title}
      .modal-body
        %header{:role => "heading"}
          .widget-body
            = form_for :share_application , url: share_application_with_companies_job_application_path(job_application) do |f|
              .row
                .col-md-12
                  .form-group.select
                    = select_tag 'vendor_company', options_for_select(Company.vendor.collect { |company|[company.name.titleize, company.id] }) ,class: 'form-control' , required: true ,:multiple => true
              .modal-footer
                -#= button_tag 'Cancel' , class: 'btn btn-default' , data: {"dismiss": "modal"}
                %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}
                  Cancel
                = f.button "Send".html_safe, data: {disable_with: disable_spinning("Sending...")} , class: 'btn btn-primary btn-sm'
:javascript
  $(document).ready(function () {
     $("#vendor_company").select2({
          placeholder: "Select Companies"
      });
  });
:css
  .select2 {
  width: 100%!important;
  }