<% if local_assigns[:btn_size_class] %>
  <% btn_size = btn_size_class %>
<% else %>
  <% btn_size = "btn-md" %>
<% end %>
<% if app.job.company == current_company && has_permission?('manage_job_applications') %>
  <%= link_to('Short list', short_list_job_application_path(app, conversation_id: conversation.id), method: :post, class: "btn #{btn_size}  btn-primary mt-12 margin-right-5 #{!app.pending_review? ? 'disabled' : "" }") %>
  <%= link_to('Reject', reject_job_application_path(app, conversation_id: conversation.id), method: :post, class: "btn #{btn_size}  btn-primary mt-12 margin-right-5 #{app.hired? || app.contract.present? || app.rejected? ? 'disabled' : "" }")%>
  <%= link_to('Interview', interview_job_application_path(app, conversation_id: conversation.id), method: :post, class: "btn #{btn_size}  btn-primary mt-12 margin-right-5 #{!app.short_listed? ? 'disabled' : "" }")%>
  <%= link_to('Hire', hire_job_application_path(app, conversation_id: conversation.id), method: :post, class: " btn #{btn_size}  btn-primary mt-12 margin-right-5 #{!app.interviewing? ? 'disabled' : "" }")%>
  <% if app.is_candidate_applicant? && !current_company.consultants.where(candidate_id: app.applicationable_id).present? %>
    <%= link_to('Start On-Boarding', new_job_application_consultant_path(app, conversation_id: conversation.id), class: "contract btn #{btn_size} btn-default mt-12 margin-right-5 #{  !app.hired? || app.contract.present? ? 'disabled' : "" }")%>
  <% else %>
    <%= link_to('Start Contract', accept_job_application_path(app, conversation_id: conversation.id), method: :post, remote: true, class: "contract btn #{btn_size} btn-default mt-12 margin-right-5 #{  !app.hired? || app.contract.present? ? 'disabled' : "" }")%>
  <% end %>
<% end %>

