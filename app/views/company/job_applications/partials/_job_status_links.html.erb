<% if local_assigns[:btn_size_class] %>
  <% btn_size = btn_size_class %>
<% else %>
  <% btn_size = "btn btn-primary btn-md mt-12 margin-right-5" %>
<% end %>
<% if app.job.company == current_company && has_permission?('manage_job_applications') %>
  <%= link_to('Short list', applicant_job_application_path(app), class: "data-table-font #{btn_size} #{app.prescreen? || app.short_listed? ? 'active_status disabled' : "" }") %>
  <%#= link_to('Pre Screen',prescreen_job_application_path(app,conversation_id: @conversation.id),class: "#{btn_size} #{app.rejected? || app.hired? || app.prescreen? ? 'disabled' : "" } prescreen",method: :post) %>
  <%= link_to('Pre Screen','#',class: "data-table-font #{btn_size}   #{'active_status' if app.prescreen? }  #{app.rejected? || app.hired? || app.prescreen? ? 'disabled' : "" } prescreen",data: {toggle: "modal", target: "#{app.rejected? || app.hired? || app.prescreen? ? 'disabled' : "#show-candidate-#{app.applicationable_id}" }"}) %>
  <%= link_to('Rate Confirmation','#',class: "data-table-font #{btn_size} #{'active_status' if app.rate_confirmation?}",data: {toggle: "modal", target: "#candidate-rate-confirmation-#{app.applicationable_id}"})%>
  <%= link_to('Agreement(s)',templates_job_application_path(app),class: "data-table-font #{btn_size}") %>
  <%= link_to('Client Submission',submit_job_application_path(app),class: "data-table-font #{btn_size} #{'active_status' if app.client_submission?}") if app.job.source.present? %>
  <%= link_to('Interview', '#', class: "data-table-font #{btn_size} #{'active_status' if app.interviewing?} ", data: {toggle: "modal", target: "#candidate-interview-#{app.applicationable_id}" })%>
  <%= link_to('Client Submission', '#', class: "data-table-font #{btn_size}  ", data: {toggle: "modal", target: "#share_application_#{app.id}" })%>
  <%= link_to('Hire', hire_job_application_path(app, conversation_id: conversation.id), method: :post, class: "data-table-font #{btn_size} #{'active_status' if app.hired?}  #{app.interviewing? ? 'disabled' : "" }")%>
  <%= link_to(colorfull_text('Reject','red'), reject_job_application_path(app, conversation_id: conversation.id), method: :post, class: "#{btn_size}  #{'active_status' if app.rejected?} #{app.hired? || app.contract.present? || app.rejected? ? 'disabled' : "" }")%>
  <% if app.is_candidate_applicant? && !current_company.consultants.where(candidate_id: app.applicationable_id).present? %>
    <%#= link_to('Start On-Boarding', new_job_application_consultant_path(app), class: "contract #{btn_size}#{  !app.hired? || app.contract.present? ? 'disabled' : "" }")%>
  <% else %>
    <%= link_to('Start Contract', accept_job_application_path(app), method: :post, remote: true, class: "contract #{btn_size} #{  !app.hired? || app.contract.present? ? 'disabled' : "" }")%>
  <% end %>
<% end %>
