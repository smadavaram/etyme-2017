<% if local_assigns[:btn_size_class] %>
  <% btn_size = btn_size_class %>
<% else %>
  <% btn_size = "btn btn-primary btn-md mt-12 margin-right-5" %>
<% end %>
<% if app.job.company == current_company && has_permission?('manage_job_applications') %>
  <%= link_to('Short list', applicant_job_application_path(app), class: "btn  btn-xs  #{app.prescreen? || app.short_listed? ? 'btn-outline-secondary' : "btn-outline-primary" }") %>
  <%#= link_to('Pre Screen',prescreen_job_application_path(app,conversation_id: @conversation.id),class: "#{btn_size} #{app.rejected? || app.hired? || app.prescreen? ? 'disabled' : "" } prescreen",method: :post) %>
  <%= link_to('Pre Screen','#',class: "btn  btn-xs    #{'' if app.prescreen? }  #{app.rejected? || app.hired? || app.prescreen? ? 'btn-outline-secondary' : "btn-outline-primary" } prescreen",data: {toggle: "modal", target: "#{app.rejected? || app.hired? || app.prescreen? ? 'disabled' : "#show-candidate-#{app.applicationable_id}" }"}) %>
  <%= link_to('Rate Confirmation','#',class: "btn btn-xs #{app.rate_confirmation? ? 'btn-outline-secondary' : 'btn-outline-primary'}",data: {toggle: "modal", target: "#candidate-rate-confirmation-#{app.applicationable_id}"})%>
  <%= link_to('Agreement(s)',templates_job_application_path(app),class: "btn btn-outline-primary btn-xs") %>
  <%= link_to('Client Submission',submit_job_application_path(app),class: "btn btn-xs #{app.client_submission? ? 'btn-outline-secondary' : 'btn-outline-primary'}") if app.job.source.present? %>
  <%= link_to('Interview', '#', class: "btn btn-xs #{app.interviewing? ? 'btn-outline-secondary' : 'btn-outline-primary'} ", data: {toggle: "modal", target: "#candidate-interview-#{app.applicationable_id}" })%>
  <%= link_to('Client Submission', '#', class: "btn btn-outline-primary btn-xs   ", data: {toggle: "modal", target: "#share_application_#{app.id}" })%>
  <%= link_to('Hire', hire_job_application_path(app, conversation_id: conversation.id), method: :post, class: "btn btn-primary btn-xs  #{'' if app.hired?}  #{app.interviewing? ? 'btn-outline-secondary' : "btn-outline-primary" }")%>
  <%= link_to('Reject', reject_job_application_path(app, conversation_id: conversation.id), method: :post, class: "mr-2 btn  btn-outline-danger  #{'' if app.rejected?} #{app.hired? || app.contract.present? || app.rejected? ? 'disabled' : "" }")%>
  <% if app.is_candidate_applicant? && !current_company.consultants.where(candidate_id: app.applicationable_id).present? %>
    <%#= link_to('Start On-Boarding', new_job_application_consultant_path(app), class: "contract #{btn_size}#{  !app.hired? || app.contract.present? ? 'disabled' : "" }")%>
  <% else %>
    <%= link_to('Start Contract', accept_job_application_path(app), method: :post, remote: true, class: "btn btn-outline-primary btn-xs contract #{  !app.hired? || app.contract.present? ? 'disabled' : "" }")%>
  <% end %>
<% end %>
<style>
  .collapsible a{
    margin-bottom: 10px;
  }
</style>
