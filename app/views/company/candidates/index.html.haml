#content.margin-top-0
  .row.margin-bottom-0
    .col-xs-12.col-sm-3.col-md-3.col-lg-3.pull-right
      = link_to 'NEW' , new_company_candidate_path , class: 'btn btn-success btn-lg pull-right header-btn hidden-mobile'
      -#= link_to "Add Reminder" ,"#", class: 'btn btn-success btn-lg pull-right header-btn hidden-mobile',"data-target" => "#new_reminder", "data-toggle" => "modal"

  %section.padding-10
    .row
      #wid-id-5.no-border
        %div
          .widget-body
            .col-md-12
              = search_form_for @search , url: search_candidates_path , method: :get do |f|
                %ul#internal-tab-1.nav.nav-tabs.tabs-pull-right
                  %br
                  .input-group.input-group-lg.hidden-mobile
                    = f.text_field :first_name_or_last_name_or_email_or_groups_group_name_cont, class: "form-control input-lg", placeholder: "Search Candidate..."
                    .input-group-btn
                      = f.button raw("<i class='fa fa-fw fa-search fa-lg'></i>") , class: 'btn btn-default'
              %br/
              %br/
              .table{:style => "width:100"}
                %table#resultTable.table.table-striped.table-bordered.table-hover
                  %thead
                    %tr
                      -#%th Pic
                      %th Name
                      %th Email
                      %th Phone
                      -#%th Role
                      %th Skills
                      %th Last Reminder
                      -#%th Location
                      -#%th Groups
                      %th Actions
                  %tbody
                    - @candidates.each_with_index do |candidate , index|
                      %tr
                        -#%td= image_tag candidate.photo, alt: '', width: '20'
                        %td= candidate.try(:full_name).try(:titleize)
                        %td= candidate.try(:email)
                        %td= candidate.try(:phone)
                        -#%td
                          - candidate.try(:roles).each do |role|
                            %span
                              .label-info.badge
                                = role.try(:name)
                        -#%td= candidate.try(:status).try(:titleize)
                        %td
                          - candidate.skills.each do |skill|
                            %span
                              .label-info.badge
                                = skill.name
                        %td
                          - reminder = find_reminderable_last_reminder(candidate)
                          = reminder.present? ? reminder.try(:title).try(:titleize) : ''
                        -#%td
                        -#  - if candidate.address.nil?
                        -#    = candidate.address.city + ' , '+ candidate.address.state + ' , '+ candidate.address.country + ' , '+ candidate.address.zip_code

                        -#%td
                          - candidate.groups.each do |group|
                            %span.badge.bg-color-blue
                              = group.try(:group_name).try(:titleize)
                        %td
                          = link_to 'Remind Me'     ,candidate_add_reminder_path(candidate)               ,class: 'btn btn-primary btn-xs', remote: :true
                          = link_to 'Activity'     ,company_activities_index_path(index: true), class: 'btn btn-xs btn-primary'
                          = link_to raw("Resume") , candidate.resume ,download: true , class: 'btn btn-xs btn-primary'
                          = link_to "show" , static_candidate_resume_path(candidate) , class: 'btn btn-xs btn-primary'
                          = link_to raw("Manage Groups"), candidate_manage_groups_path(candidate) , remote:true,class: 'btn btn-xs btn-success'
                          - if is_hot?(candidate)
                            = link_to raw("Make Hot"), candidate_make_hot_path(candidate) , remote:true,method: :post,class: 'btn btn-xs btn-danger'
                          - if !is_hot?(candidate)
                            = link_to raw("Make Normal"), candidate_make_normal_path(candidate) , remote:true,method: :post,class: 'btn btn-xs btn-primary'
                          - if candidate.campany_candidate?
                            = link_to raw("<i class='fa fa-pencil '></i>") , edit_company_candidate_path(candidate) , class: 'btn btn-xs btn-default btn-primary', title: "Edit #{candidate.full_name}"
          = digg_pagination(@candidates)

- content_for :modals do
  = render 'company/candidates/partials/add_to_my_network'
  -#= render 'company/reminders/partials/form'

- content_for :scripts do
  :javascript
    if ("#{flash[:already_exist]}"){
        $('#add-network').modal('toggle');
    }

