  .form-group
    %label.col-md-2.control-label  Candidate
    .col-md-10
      = select_tag 'contract[candidate_id]', options_for_select(current_company.candidates.collect { |c|[c.full_name, c.id] })  , class: "form-control"

  .form-group
    %label.col-md-2.control-label  SSN
    .col-md-10
      = f.text_field :b_ssn, class: "form-control", placeholder: "SNN"

  .form-group
    %label.col-md-2.control-label  Contract Type
    .col-md-10
      = f.radio_button :contract_type, "W2", class: "form-control"
      W2
      = f.radio_button :contract_type, "1099", class: "form-control"
      1099
      = f.radio_button :contract_type, "C2C", class: "form-control"
      C2C

  .form-group
