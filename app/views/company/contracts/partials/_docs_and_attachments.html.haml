  .row
    .col-md-12
      .form-group
        =f.fields_for :contract_buy_business_details do |custom_field|
          = render 'company/contracts/contract_sell_business_details_fields', f: custom_field
      %strong
        .links.col-sm-12
          = link_to_add_association '+ Add', f, :contract_buy_business_details, class: 'text-info pull-right', partial: 'company/contracts/contract_sell_business_details_fields'
          %br/

  .form-group
    %label.col-md-2.control-label
      PayRate
      %sup.text-danger *
    .col-md-10.select
      = f.select :payrate, (0..60).map{|a| ["$"+ a.to_s + " Hourly",a]}, class: "form-control"

    .form-group
    %label.col-md-2.control-label
      Time Sheet
      %sup.text-danger *
    .col-md-10.select
      = f.select :time_sheet_frequency , Contract.time_sheet_frequencies.map { |key, value| [key.humanize, key] }, {},{class: "form-control" }

  .form-group
    %label.col-md-2.control-label
      Payment Term
      %sup.text-danger *
    .col-md-10.select
      = f.select :payment_term , (0..60).map{|a| ["Next " + a.to_s + " days",a]}, {},{class: "form-control" }

  .form-group
    %label.col-md-2.control-label
    .col-md-10.select
      = f.check_box :b_show_accounting_to_employee
      %span
        Show Accounting term to employee ?

  .row
    .col-md-12
