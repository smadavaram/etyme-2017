%fieldset
  =f.fields_for :buy_contracts do |bc|
    .form-group
      %label.col-md-2.control-label  Candidate
      .col-md-10
        = bc.select :candidate_id, {}, {}, id: "buy_contract_candidate", required: true
    .form-group
      %label.col-md-2.control-label  SSN
      .col-md-10
        = bc.text_field :ssn, class: "form-control", placeholder: "SNN"
    .form-group
      %label.col-md-2.control-label  Contract Type
      .col-md-10
        = bc.radio_button :contract_type, "W2", class: "form-control"
        W2
        = bc.radio_button :contract_type, "1099", class: "form-control"
        1099
        = bc.radio_button :contract_type, "C2C", class: "form-control"
        C2C
    .row
      .col-md-12
        .form-group
          = bc.fields_for :contract_buy_business_details do |custom_field|
            = render 'company/contracts/contract_sell_business_details_fields', bc: custom_field
        %strong
          .links.col-sm-12
            = link_to_add_association '+ Add Business Details', bc, :contract_buy_business_details, class: 'text-info pull-right', partial: 'company/contracts/contract_sell_business_details_fields'
            %br/
    .row
      Employye/Vender Documents
      .col-md-12.contract-attachment
        .form-group
          =bc.fields_for :buy_send_documents do |custom_field|
            = render 'company/contracts/contract_documents_fields', f: custom_field
        %strong
          .links.col-sm-6
            = link_to_add_association '+ Add Send documents', bc, :buy_send_documents, class: 'text-info pull-right', partial: 'company/contracts/contract_documents_fields'
            %br/
        .form-group
          =bc.fields_for :buy_emp_req_docs do |custom_field|
            = render 'company/contracts/contract_documents_fields', f: custom_field
        %strong
          .links.col-sm-6
            = link_to_add_association '+ Add Employee Request documents', bc, :buy_emp_req_docs, class: 'text-info pull-right', partial: 'company/contracts/contract_documents_fields'
            %br/
        .form-group
          =bc.fields_for :buy_ven_req_docs do |custom_field|
            = render 'company/contracts/contract_documents_fields', f: custom_field
        %strong
          .links.col-sm-6
            = link_to_add_association '+ Add Vender Request documents', bc, :buy_ven_req_docs, class: 'text-info pull-right', partial: 'company/contracts/contract_documents_fields'
            %br/

    .form-group
      %label.col-md-2.control-label
        PayRate
        %sup.text-danger *
      .col-md-10.select
        = bc.number_field :payrate, class: "form-control"
        = bc.select :payrate_type, ["hourly", "daily", "weekly", "monthly"], class: "form-control"

      .form-group
        %label.col-md-2.control-label
          Time Sheet
          %sup.text-danger *
        .col-md-10.select
          = bc.select :time_sheet, Contract.time_sheet_frequencies.map { |key, value| [key.humanize, key] }, {},{class: "form-control buy-time-sheet" }
          .buy-time-sheet-setting
            .form-group.week.hidden
              %label.col-md-2.control-label
                Select day of week
              .col-md-10.select
                = bc.select :day_of_week, [["Every Monday", "mon"], ["Every Tuesday", "tue"], ["Every Wednesday", "wed"], ["Every Thursday", "thu"], ["Every Friday", "fri"], ["Every Saturday", "sat"], ["Every Sunday", "sun"]], {},{class: "form-contro" }
            .form-group.month.hidden
              %label.col-md-2.control-label
                Select date
              .col-md-10.select
                = bc.text_field :date_1, class: "date_1"
            .form-group.twice-month.hidden
              %label.col-md-2.control-label
                Select second date
              .col-md-10.select
                = bc.text_field :date_2, class: "date_1"
            %span.month.hidden OR
            = bc.check_box :end_of_month, class: "month hidden"
            = bc.label :end_of_month, "End of month", class: "month hidden"
      .form-group
        %label.col-md-2.control-label
          First Time Sheet Date
          %sup.text-danger *
        .col-md-10.select
          = bc.text_field :first_date_of_timesheet, class: "first_date_of_timesheet_field"

    .form-group
      %label.col-md-2.control-label
        Payment Term
        %sup.text-danger *
      .col-md-10.select
        = bc.select :payment_term , (0..60).map{|a| ["Net " + a.to_s + " days",a]}, {},{class: "form-control" }
        = bc.text_field :first_date_of_invoice, class: "first_date_of_invoice_field"

    .form-group
      %label.col-md-2.control-label
      .col-md-10.select
        = bc.check_box :show_accounting_to_employee
        %span
          Show Accounting term to employee ?

    .row
      .col-md-12
        .form-group
          =bc.fields_for :contract_sale_commisions do |custom_field|
            = render 'company/contracts/contract_sale_commisions_fields', bc: custom_field
        %strong
          .links.col-sm-12
            = link_to_add_association '+ Add Sale Comission', bc, :contract_sale_commisions, class: 'text-info pull-right', partial: 'company/contracts/contract_sale_commisions_fields'
            %br/


