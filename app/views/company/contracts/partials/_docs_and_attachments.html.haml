%fieldset
  =f.fields_for :buy_contracts do |bc|
    .row
      .col-md-6
        .form-group
          %label.control-label  Candidate
          .contract-fild
            .plain-select
              = bc.select :candidate_id, {}, {}, id: "buy_contract_candidate", required: true
      .col-md-6
        .form-group
          %label.control-label  SSN
          .contract-fild
            = bc.text_field :ssn, class: "form-control", placeholder: "SNN"
    .row
      .col-md-6
        .form-group
          %label.control-label  Contract Type
          .contract-fild.radio-group.contract-type-radio
            = bc.radio_button :contract_type, "W2", class: "form-control"
            W2
            = bc.radio_button :contract_type, "1099", class: "form-control"
            1099
            = bc.radio_button :contract_type, "C2C", class: "form-control"
            C2C
    .row.c2c-type.hidden
      .col-md-12
        .form-group
          %label.control-label  Candidate
          .contract-fild
            .plain-select
              = bc.select :company_id, {}, {}, id: "buy_contract_company"
        .form-group.company_contacts
          -bc.object.contract_buy_business_details.build
          =bc.fields_for :contract_buy_business_details do |csbd|
            = link_to_add_fields 'available_tour_fields', bc, :contract_buy_business_details, {partial: 'company/contracts/contract_sell_business_details_fields'}, {class: 'link-company-contacts hidden'}
          = select_tag 'contract[job_1_id]', nil, id: "select_buy_company_contacts", class: "form-control select_company_contacts"

        -#  = bc.fields_for :contract_buy_business_details do |custom_field|
        -#    = render 'company/contracts/contract_sell_business_details_fields', bc: custom_field
        -#%strong
        -#  .links
        -#    = link_to_add_association '+ Add Business Details', bc, :contract_buy_business_details, class: 'bttn text-info pull-left', partial: 'company/contracts/contract_sell_business_details_fields'
        -#    %br/
    .row
      .col-md-12.contract-attachment
        %label.control-label  Employye/Vender Documents
        .form-group
          =bc.fields_for :buy_send_documents do |custom_field|
            = render 'company/contracts/contract_documents_fields', f: custom_field
        %strong
          .links
            = link_to_add_association '+ Add Send documents', bc, :buy_send_documents, class: 'bttn text-info pull-left', partial: 'company/contracts/contract_documents_fields'
            %br/
        .form-group
          =bc.fields_for :buy_emp_req_docs do |custom_field|
            = render 'company/contracts/contract_documents_fields', f: custom_field
        %strong
          .links
            = link_to_add_association '+ Add Employee Request documents', bc, :buy_emp_req_docs, class: 'bttn text-info pull-left', partial: 'company/contracts/contract_documents_fields'
            %br/
        .form-group
          =bc.fields_for :buy_ven_req_docs do |custom_field|
            = render 'company/contracts/contract_documents_fields', f: custom_field
        %strong
          .links
            = link_to_add_association '+ Add Vender Request documents', bc, :buy_ven_req_docs, class: 'bttn text-info pull-left', partial: 'company/contracts/contract_documents_fields'
            %br/
    .row
      .col-md-12
        .form-group
          %label.control-label
            PayRate
            %sup.text-danger *
          .select
            .row
              .col-md-6
                = bc.number_field :payrate, class: "form-control"
              .col-md-6
                .plain-select
                  = bc.select :payrate_type, ["hourly", "daily", "weekly", "monthly"], class: "form-control"
    .row
      .col-md-12
        .form-group
          .row
            .col-md-6
              %label.control-label
                Time sheet
              .select
                .plain-select
                  = bc.select :time_sheet, Contract.time_sheet_frequencies.map { |key, value| [key.humanize, key] }, {},{class: "form-control sell-time-sheet" }
            .col-md-6
              .sell-time-sheet-setting
                %div{:class => "form-group week #{bc.object.time_sheet != 'weekly' ? 'hidden' : ''}"}
                  %label.control-label
                    Select day of week
                  .select
                    .plain-select
                      = bc.select :day_of_week, [["Every Monday", "mon"], ["Every Tuesday", "tue"], ["Every Wednesday", "wed"], ["Every Thursday", "thu"], ["Every Friday", "fri"], ["Every Saturday", "sat"], ["Every Sunday", "sun"]], {},{class: "form-contro" }
                %div{:class => "form-group month #{['twice a month', 'monthly'].include?(bc.object.time_sheet) ? '' : 'hidden'}"}
                  %label.control-label
                    Select date
                  .select
                    = bc.text_field :date_1, class: "date_1", placeholder: "DD/MM/YYYY"
                %div{:class => "form-group twice-month #{bc.object.time_sheet != 'twice a month' ? 'hidden' : ''}"}
                  %label.control-label
                    Select second date
                  .select
                    = bc.text_field :date_2, class: "date_1", placeholder: "DD/MM/YYYY"
                %span{:class => "form-group month #{['twice a month', 'monthly'].include?(bc.object.time_sheet) ? '' : 'hidden'}"} OR
                = bc.check_box :end_of_month, class: "month #{['twice a month', 'monthly'].include?(bc.object.time_sheet) ? '' : 'hidden'}"
                = bc.label :end_of_month, "End of month", class: "month #{['twice a month', 'monthly'].include?(bc.object.time_sheet) ? '' : 'hidden'}"
    -#.row
    -#  .col-md-6
    -#    .form-group
    -#      %label.control-label
    -#        First Time Sheet Date
    -#        %sup.text-danger *
    -#      .select
    -#        = bc.text_field :first_date_of_timesheet, class: "first_date_of_timesheet_field", placeholder: "DD/MM/YYYY"
    .row
      .col-md-6
        .form-group
          %label.control-label
            Payment Term
            %sup.text-danger *
          .select
            .row
            = bc.select :payment_term , (0..60).map{|a| ["Net " + a.to_s + " days",a]}, {},{class: "form-control" }
      -#.col-md-6
      -#  .form-group
      -#    %label.control-label
      -#      First invoice date
      -#      %sup.text-danger *
      -#    .select
      -#      .plain-select
      -#        = bc.text_field :first_date_of_invoice, class: "first_date_of_invoice_field", placeholder: "DD/MM/YYYY"
    .row.contract-Accounting
      .col-md-6
        .form-group
          %label.control-label
          .select
            = bc.check_box :show_accounting_to_employee
            %span
              Show Accounting term to employee ?

    .row
      .col-md-12
        .form-group
          =bc.fields_for :contract_sale_commisions do |custom_field|
            = render 'company/contracts/contract_sale_commisions_fields', bc: custom_field
        %strong
          .links
            = link_to_add_association '+ Add Sale Comission', bc, :contract_sale_commisions, class: 'bttn text-info pull-left', partial: 'company/contracts/contract_sale_commisions_fields'
            %br/


