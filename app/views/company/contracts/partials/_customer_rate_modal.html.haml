.modal#customer_rate_change
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %h4#myModalLabel.modal-title
          %strong Customer Rate Change
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"}
        Ã—
      .modal-body
        = form_for @contract.sell_contract.change_rates.build, url: change_rates_path(contract_id: @contract.sell_contract.id, type: 'SellContract'), method: :post, html:{class: 'contract-expense-type'} do |f|
          .col-md-12.display-flex
            =render 'company/contracts/partials/rate_fields', f: f, rates: nil, contract: @contract, usics: false
          %br
          = f.submit 'Save', class: 'btn btn-primary pull-right'