=link_to "Timeline", timeline_contracts_path(contract_id: contract.id), class: "btn btn-primary mb-1"
=link_to "Tree View", tree_view_contract_path(contract.number), class: "btn btn-primary mb-1"
=link_to 'Download', download_contract_path(contract), class: 'btn btn-primary mb-1'
=link_to 'Edit', new_contract_path(contract_id: contract.id), class: "btn btn-primary #{contract.in_progress? ? 'disabled' : ''} mb-1"
