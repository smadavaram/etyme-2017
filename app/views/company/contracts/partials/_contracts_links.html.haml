=link_to "Extend Contract" , '#', class: "btn btn-outline-success mb-1", data: { toggle: "modal", target: "#extend_contract#{contract.id}" } if contract.in_progress?
=link_to_if contract.is_ended?, "Re-Activate Now", update_contract_status_contract_path(contract, status: "accepted"), method: :patch, class: "btn btn-success mb-1" do; end
