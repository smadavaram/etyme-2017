%fieldset
  .row
    .col-md-6
      .form-group
        %label.control-label  Jobs
        .contract-fild
          .plain-select
            = f.select :job_id, '', {}, id: 'select_jobs', class: 'form-control'
    .col-md-6
      .form-group
        %label.control-label  Candidate
        .contract-fild
          .plain-select
            = f.select :candidate_id, '', {}, id: 'select_candidates', required: true
  .row
    .col-md-6
      .form-group
        %label.control-label  Work location
        .contract-fild
          = f.text_field :work_location, class: "form-control", placeholder: "Contract Work location"

    .col-md-6
      .form-group
        %label.control-label  Client
        .contract-fild
          .plain-select
            = f.select :client_id, '', {}, id: 'select_clients'
  .row
    .col-md-6
      .form-group
        %label.control-label
          Start Date
          %sup.text-danger *
        .contract-fild
          = f.text_field :start_date ,class: "form-control" , required: 'required', placeholder: "Contract Start Date"
    .col-md-6
      .form-group
        %label.control-label
          End Date
          %sup.text-danger *
        .contract-fild
          = f.text_field :end_date ,class: "form-control" , required: 'required', placeholder: "Contract End Date"
