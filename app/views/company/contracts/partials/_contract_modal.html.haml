.modal.fade.in{ id: "contract-#{job.id}","aria-hidden": "true", "aria-labelledby": "myModalLabel", :role => "dialog"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"}
          Ã—
        %h1
          %span.semi-bold Contract -
          %i.ultra-light #{job_application.company.try(:name)}
          (#{link_to job_application.job_invitation.try(:recipient).full_name ,  '#' , target: '_blank'})
          -#%sup.badge.bg-color-red.bounceIn.animated v 2.0
          %br/
          %small.text-danger.slideInRight.fast.animated
            %strong Job - #{job.title}
        %p
          = raw job.description


      .modal-body
        = form_for [job,job.contracts.new] , html: {class: 'form-horizontal'} , remote: true do |f|
          = f.hidden_field :job_application_id , value: job_application.id
          %fieldset
            .form-group
              %label.col-md-2.control-label Start Date
              .col-md-4
                = f.text_field :start_date ,class: "form-control" , required: 'required', placeholder: "Contract Start Date"
              %label.col-md-2.control-label End Date
              .col-md-4
                = f.text_field :end_date ,class: "form-control" , required: 'required', placeholder: "Contract End Date"
            .form-group
              %label.col-md-2.control-label Company Docs
              .col-md-10
                = select_tag "contract[company_doc_ids]", options_from_collection_for_select(current_company.company_docs, "id", "name"), prompt: "Select something" , class:"form-control input-lg multi-select2-company-docs",multiple: true
            .form-group
              %label.col-md-2.control-label Terms & Conditions
              .col-md-10
                -#=  f.text_area :terms_conditions , class: 'form-control',:class => "tinymce", rows: 6, cols: 30, placeholder: 'Enter Contract Terms & conditions'
                -#= tinymce :default
            .form-group
              %label.col-md-2.control-label Billing Frequency
              .col-md-4
                = select_tag 'contract[binding_frequency]', options_for_select(BILLING_FREQUENCY.collect{ |type| [type[0], type[1]] })  , class: "form-control"
              %label.col-md-2.control-label Time Sheet Frequency
              .col-md-4
                = select_tag 'contract[time_sheet_frequency]', options_for_select(BILLING_FREQUENCY.collect{ |type| [type[0], type[1]] }) , class: "form-control"
            %hr
            .form-group
              %label.col-md-2.control-label Message (optional)
              .col-md-10
                = f.text_area :message_from_hiring, class: "form-control", rows: "2" ,placeholder: 'Write tour message'
          .modal-footer
            -#= button_tag 'Cancel' , class: 'btn btn-default' , data: {"dismiss": "modal"}
            %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}
              Cancel
            = f.submit 'Save' , class: 'btn btn-primary'
