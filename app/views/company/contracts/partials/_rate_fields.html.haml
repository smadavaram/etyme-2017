- if usics == true
  - c_contract = contract.buy_contract
  - r_rates = c_contract.change_rates.first
  - if r_rates.rate.nil?
    - r_rates = rates
- else
  - c_contract = contract.sell_contract
  - r_rates = rates

.row
  .col-md-2
    .form-group
      %label.control-label
        PayRate
      .col-sm-12.pl-0
        = f.number_field :rate,class: "form-control", value: r_rates.present? && r_rates.rate.present? ? r_rates.rate || contract.sell_contract.change_rates.first.rate : nil, placeholder: "i.e 2.5 or 3"
  .col-md-2
    .form-group
      %label.control-label
        Expected Hrs/Day
      .col-sm-12.pl-0
        = f.number_field :working_hrs,class: "form-control" ,placeholder: r_rates.present? && r_rates.working_hrs.present? ? r_rates.working_hrs.to_s || contract.sell_contract.change_rates.first.working_hrs.to_s : "i.e 2.5 or 3", max: 24, min: 1
  - if usics
    .col-md-2
      .form-group
        %label.control-label
          USCIS Rate
        .col-sm-12.pl-0
          = f.number_field :uscis,class: "form-control",value:  c_contract.present? && c_contract.change_rates.first.uscis.present? ?  c_contract.change_rates.first.uscis : nil, placeholder: rates.present? && rates.uscis ? rates.uscis.to_s : "i.e 2.5 or 3"
  .col-md-2
    .form-group
      %label.control-label
        Rate Type
      .col-sm-12.pl-0
        = f.select :rate_type, ["hourly", "daily", "weekly", "monthly"],{}, class: "form-control"
  .col-md-2
    .form-group
      %label.control-label
        From Date
      .col-sm-12.pl-0
        = f.text_field :from_date, class: "form-control contract_rate_start_date", placeholder: "Pick From Date"
  .col-md-2  
    .form-group
      %label.control-label
        To Date
      .col-sm-12.pl-0
        = f.text_field :to_date, class: "form-control contract_rate_end_date", placeholder: "Pick To Date"
