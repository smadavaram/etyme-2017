#content
  .row
  %section
    .row
      %article.col-sm-12.col-md-12.col-lg-12
        #wid-id-0.jarviswidget{"data-widget-deletebutton" => "false", "data-widget-editbutton" => "false"}
          %header
            %span.widget-icon
              %i.fa.fa-check
            %h2 Add Bill
          %div
            .jarviswidget-editbox
            .widget-body
              .row
                .col-md-3
                  %label Bill Type
                .col-md-3
                  .radio
                    %label
                      %input{:checked => "checked", :name => "optradio", :type => "radio"}>/
                      Vendor

                .col-md-3
                  .radio
                    %label
                      %input{:checked => "checked", :name => "optradio", :type => "radio"}>/
                      Client Exp Bill

                .col-md-2
                  %label{:for => 'bill_no'} Bill no.
                  = text_field_tag 'bill_no', '', class: 'form-control'
              %br
              .row
                .col-md-3
                  %label Contract
                .col-md-4
                  = select_tag "contracts",options_for_select(Contract.all.map{|c| [c.title,c.id] }),{class: 'form-control select2',required: true, prompt: 'Select Contract' }

              %br
              .row
                .col-md-3
                  %label Select Account
                .col-md-4
                  = select_tag "account",options_for_select(Candidate.all.map{|c| [c.full_name,c.id] }),{class: 'form-control select2',required: true, prompt: 'Choose Consultant/Vendor' }

              %br
              .row
                .col-md-3.form-group
                  %label{:for => "mailing_address"} Mailing Address:
                  %textarea#comment.form-control{:rows => "5"}

                .col-md-2
                  %label{:for => "terms"} Terms:
                  = select_tag 'terms', options_for_select((1..10).to_a.map{ |e| 'Net '+e.to_s}), {class: 'form-control select2',required: true, prompt: 'Select terms' }

                .col-md-2
                  %label{:for => 'bill_date'} Bill Date:
                  = date_field_tag 'bill_date', '', class: 'form-control'

                .col-md-2
                  %label{:for => 'due_date'} Due Date:
                  = date_field_tag 'due_date', '', class: 'form-control'

              

              %br
              .row
                .col-md-2
                  %label Account details

              %br
              .row
                .col-md-12
                  %table.table.table-bordered.account_detail
                    %thead
                      %tr
                        %th Cycle - Timesheet
                        %th Client
                        %th Consultant Name
                        %th Action
                        %th Status
                        %th Hours
                        %th Per Unit Rate
                        %th Total
                    %tbody
                      %tr
                        %td C1 - 1 Aug - 5 Aug
                        %td 
