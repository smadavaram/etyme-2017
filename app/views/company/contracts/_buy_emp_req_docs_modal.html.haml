.modal#buy_emp_req_docs
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %h2#myModalLabel.modal-title
          %strong Request Document
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"}
        Ã—
      .modal-body
        = form_for(@contract.buy_contracts&.first.buy_emp_req_docs.build, as: :document, url: buy_emp_doc_create_contracts_path, remote: true) do |erd|
          %fieldset
            .form-row
              .col-3
                %label.control-label
                Documents
                .contract-fild
                  = render "shared/file_attachement", f:erd,attr_name: :doc_file,button_name: "Pick File",multiple: false
                  -#= f.filepicker_field :doc_file, :button_text => "Pick File", disable: true , class: 'file-pick btn btn-primary filepicker-attach filepicker-attach-doc'
                  = erd.hidden_field :file_name, class: "doc-file-name"
                  = erd.hidden_field :file_size, class: "doc-file-size"
                  = erd.hidden_field :file_type, class: "doc-file-type"
              .col-7
                .form-group
                  %label.control-label
                    expire date
                  .contract-fild
                    = erd.text_field :when_expire ,class: "form-control exp_date" , placeholder: "DD/MM/YYYY"
            .form-row
              .col-12
                .form-group
                  %label.control-label
                    = erd.check_box :is_sign_required ,class: "form-control is-require-sign" , placeholder: ""
                    = erd.label :is_sign_required
                    = erd.hidden_field :creatable_type, class: "form-control", value: "Company"
                    = erd.hidden_field :creatable_id, class: "form-control", value: current_company.id
                  .form-group.assign_signable.hidden
                    -erd.object.document_signs.build
                    =erd.fields_for :document_signs do |ds|
                      = link_to_add_fields 'available_tour_fields', erd, :document_signs, {partial: 'company/contracts/contract_document_users_fields'}, {class: 'doc-user-generater hidden'}
                      = ds.select :signable, {}, {}, class: "form-control whois_sign" , placeholder: ""
                  .modal-footer
                    %a.btn.btn-default{"data-dismiss" => "modal", :type => "button"}
                      Cancel
                    = erd.submit 'Save', class: 'btn btn-primary'

