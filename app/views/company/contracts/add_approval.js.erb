<% if flash[:errors].present? %>
<% flash[:errors].each do |e| %>
flash_error("<%= e %>");
<% end %>
<% end %>
<% if flash[:success].present? %>
flash_success("<%= flash[:success] %>");
<% end %>
<% if params[:approval][:approvable_type] == "timesheet" %>
$('#collaborators').html("<%= j render 'company/contracts/partials/approval' , approvals: @approvals%>");
$('#collaborator_modal').modal('hide');
<% elsif params[:approval][:approvable_type] == "timesheet_approve" %>
$('#ts_approver').html("<%= j render 'company/contracts/partials/approval' , approvals: @approvals%>");
$('#collaborator_modal').modal('hide');
<% elsif params[:approval][:approvable_type] == "invoice" %>
$('#invoice').html("<%= j render 'company/contracts/partials/approval' , approvals: @approvals%>");
$('#collaborator_modal').modal('hide');
<% end %>