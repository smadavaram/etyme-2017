<%= javascript_include_tag "application" %>
<%= render 'type_tabs' %>

<style>
.modal-backdrop {
  display: none !important;
}
</style>
<div class="content-i">
  <div class="content-box">
    <div class="row">
      <div class="col-sm-12">
        <div class="element-wrapper">
          <div class="element-box-tp">
            <div class="controls-above-table">
              <div class="row mr-1 ml-1">
                <div class="col-sm-6">
                  <%= link_to "Email", '#', class: 'btn share btn-sm btn-secondary ml-2', id: 'share_jobs_button' %>
                  <% if [nil, '', 'Job'].include? params[:type] %>
                    <%= link_to "Share", '#', class: 'btn share btn-sm btn-secondary ml-2', id: "share_via_jobs_button" %>
                  <% end %>
                  <%= link_to "Add #{params[:type] || "Job"}", new_job_path(type: params[:type] || "Job"), class: 'btn btn-sm btn-secondary ml-2' %>
                </div>
                <div class="col-sm-6">
                  <div class="form-inline justify-content-sm-end">
                    <input class="form-control form-control-sm rounded bright" id="jobs_datatable-search" placeholder="Search" type="search"></input>
                    <button class="btn btn-sm btn-secondary" type="button" id="jobs_datatable-search-btn">Search</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="table-responsive">
              <table aria-describedby="datatable_fixed_column_info" class="table text-center table-bordered table-lg table-v2 table-striped no-footer" id="jobs_datatable" role="grid" style="width: 100%;" width="100%"
                data-source="<%= jobs_path(format: :json)+'?type='+params[:type] %>">
                <thead>
                  <tr>
                    <th style="width: 0px"><%= "<input type='checkbox' name='select_all[]' id='select_all_'>".html_safe %></th>
                    <th style="width: 200px">Title</th>
                    <th style="width: 100px;">Category</th>
                    <th style="width: 78px;">Last Date</th>
                    <th style="width: 90px">Location</th>
                    <th style="width: 190px;">Posted By</th>
                    <th>Status</th>
                    <th class="">Actions</th>
                  </tr>
                </thead>
                <tbody>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'company/jobs/partials/share_jobs_with_link_preview' %>

<%= javascript_tag do %>
  $(function() {
    default_active_nav('.ln-6');
  })
<% end %>
