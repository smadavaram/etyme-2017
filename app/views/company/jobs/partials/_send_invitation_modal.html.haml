.modal.fade.in{ id: "job-invite-#{job.id}","aria-hidden": "true", "aria-labelledby": "myModalLabel", :role => "dialog", :style => "display: none;", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"}
          Ã—
        %h4#myModalLabel.modal-title Job Invitation
      .modal-body
        = form_for [job,job_invitation] , remote: true do |f|
          = f.hidden_field :job_id , value: params[:job_id]
          = f.hidden_field :recipient_type , value: 'Vendor'
          .row
            .col-md-12
              .form-group
                = f.select :recipient_id ,Employer.all.map{|vendor| [vendor.full_name,vendor.id] } ,{},class: "form-control" , :required =>'required', placeholder: "Select something"
          .modal-footer
            %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}
              Cancel
            = f.submit 'Send' , class: 'btn btn-primary'
- content_for :scripts do
  :javascript
    $('#job_invitation_recipient_id').find('option').first().html('Select a Vendor....')