= form_for [job,job.job_invitations.new] , url: create_multiple_job_job_invitations_path(job) do |f|
  = f.hidden_field :job_id , value: job.id
  = f.hidden_field :recipient_type , value: 'Candidate'
  .row
    .col-md-12
      .form-group
        = select_tag 'temp_candidates', options_for_select(candidates.collect { |c| [c.full_name,c.id] }),prompt: "Select Candidate" ,class: 'form-control' , required: true ,:multiple => true
  .row
    .col-md-12
      .form-group
        = f.text_field :expiry ,class: "form-control" , required: 'required', placeholder: "Invitation Expire Date",id:"vendor_expiry"
  .row
    .col-md-12
      .form-group
        = f.text_area :message ,class: "form-control" ,row: '3' , required: 'required', placeholder: "Enter Description"
  .modal-footer
    -#= button_tag 'Cancel' , class: 'btn btn-default' , data: {"dismiss": "modal"}
    %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}
      Cancel
    = f.button "Send".html_safe, data: {disable_with: disable_spinning("Sending...")} , class: 'btn btn-primary btn-sm'