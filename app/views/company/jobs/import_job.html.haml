
%body.bg_white
  .container-fluid.bg_white
    .row{style: "padding: 0px 15px 15px 15px;"}
      .form-group
        .multi-field-wrapper
          .multi-fields
            = form_tag company_upload_job_path do 
              %br
              .row
                .col-md-12
                  %h4
                    %b Import Jobs 
                  .form-group.candidate-association
                  .col-md-12{:style=>"margin-top: 25px;"}
                    .form-group
                      .col-md-2
                        %p Select job File
                      .col-md-2
                        = hidden_field_tag :file,'' ,id: "job_file"
                        = button_tag "Select File", onclick: "upload_file('#job_file')", class: "btn btn-primary",type: "button"
                      .col-md-2
                        = submit_tag "Import", class: "btn btn-primary"
                      .col-md-2  
                        = link_to "Download Template" , company_download_job_template_path(), class: 'btn btn-md btn-primary mr-bottom-10'

