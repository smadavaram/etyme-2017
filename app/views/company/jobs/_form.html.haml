= simple_form_for @company_job ,html:{ class:'form-horizontal'} do |f|
  %fieldset
    %legend Company Jobs
    .form-group
      %label.col-md-2.control-label Title
      .col-md-10
        = f.text_field :title , class: 'form-control' , placeholder: 'Enter Job Title' , required: true
    .form-group
      %label.col-md-2.control-label Job Location
      .col-md-10
        = select_tag "job[location_id]", options_from_collection_for_select(@locations, "id", "name") , class: 'form-control'  , required: true
        -#= f.text_field :location_id , class: 'form-control' , placeholder: 'Enter Job Location' , required: true
    .form-group
      %label.col-md-2.control-label Start Date
      .col-md-10
        = f.text_field :start_date , class: 'form-control' , placeholder: 'Enter Start Date'
    .form-group
      %label.col-md-2.control-label End Date
      .col-md-10
        = f.text_field :end_date , class: 'form-control' , placeholder: 'Enter End Date'
        %p.note
          %strong Note:
          works in Chrome, Firefox, Opera and IE10.
    .form-group
      %label.col-md-2.control-label Description
      .col-md-10
        =  f.text_area :description , class: 'form-control' ,rows: '4' , placeholder: 'Enter Job Description'
  .form-actions
    .row
      .col-md-12
        %button.btn.btn-default{:type => "submit"}
          Cancel
        = f.submit "Submit", class: 'btn btn-primary'

- content_for :scripts do
  :javascript
    // DO NOT REMOVE : GLOBAL FUNCTIONS!

    $(document).ready(function() {

      pageSetUp();

      // Job Strat Date
      $('#job_start_date').datepicker({
        dateFormat : 'dd.mm.yy',
        prevText : '<i class="fa fa-chevron-left"></i>',
        nextText : '<i class="fa fa-chevron-right"></i>',
        onSelect : function(selectedDate) {
          $('#job_start_date').datepicker('option', 'minDate', selectedDate);
        }
      });

      // Job End Date
      $('#job_end_date').datepicker({
        dateFormat : 'dd.mm.yy',
        prevText : '<i class="fa fa-chevron-left"></i>',
        nextText : '<i class="fa fa-chevron-right"></i>',
        onSelect : function(selectedDate) {
          $('#job_end_date').datepicker('option', 'minDate', selectedDate);
        }
      });

    });
