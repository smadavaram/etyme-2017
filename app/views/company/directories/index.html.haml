.content-i
  .content-box
    .row
      .col-sm-12
        .element-wrapper
          .element-box-tp
            .controls-above-table
              .row.mr-1.ml-1
                .col-sm-6
                  %a.btn.btn-sm.btn-secondary{ :href => "#{new_company_company_path}", :title => "New Contact" } New Contact
                .col-sm-6
                  .form-inline.justify-content-sm-end
                    %input.form-control.form-control-sm.rounded.bright{placeholder: "Search", type: "text", type: 'search', id: 'company-directory-datatable-search'}
            .table-responsive
              %table#company-directory-datatable.table.table-bordered.table-lg.table-v2.table-striped.data-table-font{"data-source" => "#{directories_path(format: :json)}"}
                %thead
                  %tr
                    %th
                      %input{ type:"checkbox", name:"select_all", id:"example-select-all"}
                    %th Domain
                    %th Name
                    %th Contact
                    %th Title
                    %th Roles/Permissions
                    %th Reminder/Note
                    %th Actions
                %tbody


-content_for :scripts do
  :javascript
    $(document).ready(function(){
      $('#company-directory-datatable-search').keyup(function(){
        $('#company-directory-datatable').DataTable().search( $(this).val() ).draw();
      })
    })






