      .row.text-left
        .col-sm-6
          .col-sm-12.mb-2
            .col-md-12
              %label.control-label
                Pay Cycle Name
            .col-md-12
              .select
                .plain-select
                  = f.text_field :title, class: "form-control"
          .col-sm-12
            .col-md-12
              %label.control-label
                Frequency
            .col-md-12
              .select
                .plain-select
                  = f.select :payroll_type, Contract.time_sheet_frequencies.map { |key, value| [key.humanize, key] }, {selected: payroll&.payroll_type},{class: "form-control payroll_frequency" }
