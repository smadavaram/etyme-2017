              %td.p-0{"data-type": "sc_day_time"}= f.text_field :sc_day_time, class: "form-control p_time"
              %td.p-0{"data-type": "sp_day_time"}= f.text_field :sp_day_time, class: "form-control p_time sp_payroll init_period"
