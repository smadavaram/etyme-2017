.modal.fade{id: "reminder-#{assignee.id}" }
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"}
          Ã—
        %h4.modal-title
          %strong Add New Reminder
      .modal-body.no-padding
        = form_for Reminder.new ,html:{ class:'form-horizontal',id: 'group-val'} do |f|
          = f.hidden_field :reminderable_id ,value: assignee.id
          = f.hidden_field :reminderable_type ,value: assignee.class
          %br
          .form-group
            %label.col-md-3.control-label
              Remind At
              %sup.text-danger *
            .col-md-8
              = f.text_field :remind_at ,required: true ,class:'form-control',id:"remind"
          .form-group
            %label.col-md-3.control-label
              Memo
              %sup.text-danger *
            .col-md-8
              = f.text_area :title , required: true ,class:'form-control' ,placeholder: "Memo here"
          .modal-footer
            = f.button "submit".html_safe , class: 'btn btn-primary btn-sm' , data: {disable_with: ("Submitting...")} ,id: 'form_id'
            %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}
              Cancel
        :css
          .select2{
            width: 389px;
            }


