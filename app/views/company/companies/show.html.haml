              -if current_company.owner_verified == false
                .row
                  .col-lg-12
                    %button.btn.btn-primary{:type => "submit"}
                      Verify Your Domain
              - else
                .row
                  .col-lg-12
                    .btn.btn-primary{:type => "submit"}
                      Your Domain is already verified



