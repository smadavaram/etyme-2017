-if request.post?
  $('#company-#{@company_contact.id}').modal('hide')
  -if flash[:errors].present?
    - flash[:errors].each do |e|
      flash_error("#{e}");
  - if flash[:success].present?
    flash_success("#{flash[:success]}");
-else
  $('.remote_container').html("#{ j render 'company/companies/partials/assign_group_to_contact_modal' , contact: @company_contact }");
  $('#company-#{@company_contact.id}').modal('toggle');
  $(".select2").select2({placeholder: "Select Group(s)"});