= form_for :invited_company , url:company_company_assign_groups_to_contact_path,method: :post ,html:{ class:'form-horizontal',id: 'group-val'} do |f|
  %br/
  .form-group
    %label.col-md-3.control-label
      Select Groups
      %sup.text-danger *
    .col-md-8.mr-bottom-20.popup_select
      = f.select :group_ids, options_for_select(current_company.groups.map { |c| [c.group_name,c.id] }, company.groups.map { |c| c.id }),{},class: 'form-control select2' ,:multiple => true
  .modal-footer
    = f.button "Update Group".html_safe , class: 'btn btn-primary' , data: {disable_with: ("Updating...")} ,id: 'form_id'
    %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}
      Cancel
:css
  .select2{
    width: 389px;
    }

