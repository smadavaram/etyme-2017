#content
  .row
    .col-xs-12.col-sm-3.col-md-3.col-lg-3.pull-right
      = button_tag 'NEW' ,class: 'btn btn-success btn-lg pull-right header-btn hidden-mobile' , "data-toggle": "modal" , "data-target":"#new-contract-company"
  %section.margin-top-10
    .row
      #wid-id-5.no-border
        %div
          .widget-body
            .col-md-12
              = search_form_for @search , url: search_companies_path , method: :get do |f|
                %ul#internal-tab-1.nav.nav-tabs.tabs-pull-right
                  %br
                  .input-group.input-group-lg.hidden-mobile
                    = f.text_field :invited_company_name_cont, class: "form-control input-lg", placeholder: "Search Company..."
                    .input-group-btn
                      = f.button raw("<i class='fa fa-fw fa-search fa-lg'></i>") , class: 'btn btn-default'
              %brÂ 
              %table#dt_basic.table.table-striped.table-bordered.table-hover{:width => "100%"}
                %thead
                  %tr
                    %th{"data-hide" => "phone"} Pic
                    %th Name
                    %th Company
                    -#%th Owner
                    -#%th Owner Email
                    %th Email
                    %th Phone
                    %th Groups
                    %th Actions
                %tbody
                  -@invited_companies.each do |d|
                    %tr
                      %td= image_tag show_recipient_picture(d.invited_company.logo) , alt: '', width: '40'
                      %td= link_to d.invited_company.try(:company_contacts).try(:first).try(:full_name) ,"#"
                      -#%td= d.invited_company.try(:company_contact).try(:full_name)  rescue "  --"
                      -#%td= d.invited_company.company_contact.try(:email)
                      %td= link_to d.try(:invited_company).try(:name) ,profile_company_path(d.try(:invited_company))
                      %td= d.invited_company.try(:company_contacts).try(:first).try(:email)
                      %td=  d.invited_company.try(:company_contacts).try(:first).try(:phone)
                      %td
                        - d.groups.each do |group|
                          %span.badge.bg-color-blue
                            = group.try(:group_name).try(:titleize)
                      %td
                        -#= link_to "Contacts" ,company_contacts_path(d.try(:invited_company)), class: 'btn btn-xs btn-default btn-primary'
                        = link_to raw("<i class='fa fa-pencil '></i>") , edit_company_path(d.invited_company) , class: 'btn btn-xs btn-default btn-primary',remote: :true ,title:"Edit #{d.invited_company.name}"
                        = link_to raw("Assign Groups"), company_company_assign_groups_path(d.invited_company) , remote:true,class: 'btn btn-xs btn-success'
                        -#= link_to raw("<i class='fa fa-times '></i>") , company_path(d.invited_company) ,method: :delete, class: 'btn btn-xs btn-default btn-danger' ,title:"Delete #{d.invited_company.name}",data: {confirm: "Are you sure you want to Delete this Company ?", verify: 'Confirm', verify_text: "Type 'Confirm' to Continue"}
            = digg_pagination(@invited_companies)

- content_for :modals do
  #job_invitation
  = render 'company/companies/partials/new_company'