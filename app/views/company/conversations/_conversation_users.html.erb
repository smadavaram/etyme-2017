<% users.each do |usr| %>
  <% chat_user_data = set_company_chat_user_data(@current_chat, usr) %>
  <li class="nav-item" class="<%= chat_user_data[:class_name]  %>"  id="chat-user<%= usr.id %>">
    <%#= link_to  company_conversations_path(user_id: usr.id, user_type: usr.class.to_s), class: "nav-link", remote: true, method: :post do %>
    <%= link_to "#", class: "btn btn-success btn-md start-conversation",
                "data-sid" => current_company.id, "data-rid" => usr.id, "data-chattopic" => "OneToOne",
                "data-stype" => current_company.class, "data-rtype" => usr.class.to_s do %>

    <div class="user_ds">
        <%= image_tag usr.photo, class: "img-fluid" %>
        <h5><%= usr.full_name %></h5>
        <p><%= chat_user_data[:last_msg]  %> <%= chat_user_data[:last_msg_time]  %> <%= chat_user_data[:unread_count]  %></p>
      </div>
    <% end %>
  </li>
<% end if users.present?  %>