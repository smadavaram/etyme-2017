<% if @conversation.present? %>
  <% user = @conversation.chatable_type == "Group" ? @conversation.chatable : (@conversation.senderable == current_user ? @conversation.recipientable : @conversation.senderable) %>

  <div class="right-sidebar ">
    <div class="row collab-row" >
      <div onclick="backtochat()">
        <img class="left-arrow" src="/assets/left-arrow.png" style="margin-right: 10px; margin-top: 10px;"></img>
      </div>

      <span class="collab-text">Collaborators</span>
      <a href="#" class="add-to-conversation " data-conid=<%= @conversation.id %> data-cid=<%= user.id %> data-ctype=<%= user.class.to_s %>>
        <div class="icon-style-1">
          <i class="fa fa-plus iconplus" ></i>
        </div>
      </a>
    </div>

    <div class="right-sidebar1" >
      <% if @conversation.chatable_type == "Group" %>
        <% @conversation.chatable.groupables.each do |g| %>
          <% if current_company.id == @conversation.chatable.company_id && g.groupable != current_user %>
            <div class="row chats-rows" style="margin: 7% 7%">
              <div class="col-sm-3 col-md-3 col-lg-3 ">
                <div class="row" style="width: 12vh">
                  <a href="<%= company_user_profile_path(g.groupable.id) %>">
                    <!--        <img src="/assets/keanu.jpg">-->
                    <%= user_image(g.groupable, style: 'width: 35px; height: 35px;', class: 'image-35 mr-1', title: "#{g.groupable&.full_name}") %>
                  </a>
                </div>
              </div>
              <div class="col-sm-6 col-md-6 col-lg-6 " >
                <div class="row member-name">
                  <span > <%= do_ellipsis(g.groupable&.full_name&.capitalize, 13) %></span>
                </div>
              </div>
              <div class=" col-sm-3 col-md-3 col-lg-3 ">
                <div class="row line-style">
                  <a href="<%= remove_from_group_groups_path(groupable: g.id, conversation: @conversation.id) %>">
                    <img src="/assets/image-line.png">
                  </a>
                </div>
              </div>
            </div>
          <%else %>
            <div class="row chats-rows" style="margin: 7% 7%">
              <div class="col-sm-3 col-md-3 col-lg-3 ">
                <div class="row" style="width: 12vh">
                  <a href="<%= company_user_profile_path(g.groupable.id) %>">
                    <!--              <img src="/assets/keanu.jpg">-->
                    <%= user_image(g.groupable, style: 'width: 35px; height: 35px;', class: 'image-35 mr-1', title: "#{g.groupable.full_name}") %>
                  </a>
                  <%#if g.groupable&.photo.blank? %>
                  <%#=entity_image(g.groupable&.first_name,g.groupable&.last_name)%>
                  <%#else%>
                  <%#= user_image( g.groupable ,class: 'superbox-img',style: 'border-radius: 50%;width:30px !important;height:30px !important',alt: g.groupable&.full_name)%>
                  <%#end%>
                </div>
              </div>
              <div class="col-sm-6 col-md-6 col-lg-6 " >
                <div class="row member-name">
              <span >
                  <%= do_ellipsis(g.groupable&.full_name&.capitalize, 12) %>
              </span>
                </div>
              </div>
              <!--            <div class=" col-sm-3 col-md-3 col-lg-3 line-style">-->
              <!--              <img src="/assets/image-line.png">-->
              <!--            </div>-->
            </div>
          <% end %>
        <% end %>
      <% end %>
      <div class="row shared-files" style="margin: 10% 10%;">
        <div class="shared-text">Shared Files</div>
        <img src="/assets/folder1.png" class=" file-icon">
        <img src="/assets/folder2.png" class="file-icon" style="margin-left: -17px; margin-top: 13px">
      </div>
    </div>
  </div>


<% end %>
