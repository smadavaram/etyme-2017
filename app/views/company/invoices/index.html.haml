-if params["contract_id"].present?
  #content
  %section.margin-top-10.padding-10
    #wid-id-5.no-border
      %div
        %br/
        %br/
        .table{:style => "width:100"}
          %table#resultTable.table.table-striped.table-bordered.table-hover
            %thead
              %tr
                %th id
                %th Contract
                %th Start Date
                %th End Date
                %th Status
                %th Detail
            %tbody
              - @invoices.each_with_index do |invoice , index|
                %tr
                  %td= index+1
                  %td= invoice.contract.title.humanize
                  %td= invoice.start_date
                  %td= invoice.end_date
                  %td= invoice.status.humanize
                  %td
                    = link_to 'View Detail' , contract_invoice_path(@contract , invoice) , target: '_blank' ,class: 'btn btn-xs btn-default btn-primary'

-else
  #content
    #wid-id-5.no-border.jarviswidget
      %h2 All Invoices
      %div
        .widget-body
          %ul#myTab1.nav.nav-tabs.no-border
            %li.active
              %a{"data-toggle" => "tab", :href => "#tab-r1"}
                %span.badge.bg-color-blue.txt-color-white= @send_contract_invoices.count
                Sent Invoices
            %li
              %a{"data-toggle" => "tab", :href => "#tab-r2"}
                %span.badge.bg-color-blueDark.txt-color-white= @rec_contract_invoices.count
                Received Invoices
          .col-md-12
            .tab-content
              #tab-r1.tab-pane.padding-top-15.active.in
                = render 'company/invoices/partials/sent_invoices' , data: @send_contract_invoices
              #tab-r2.tab-pane.padding-top-15
                = render 'company/invoices/partials/receive_inovices' , data: @rec_contract_invoices









































