.modal{ id: "share_message_#{message.id}","aria-hidden": "true", "aria-labelledby": "myModalLabel", :role => "dialog", :style => "display: none;", :tabindex => "-1"}
  .modal-dialog.modal-md
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"}
          Ã—
        %h2#myModalLabel.modal-title
          %strong Share Message
      .modal-body
        = form_for message, url:  company_chat_message_share_message_path(message.chat,message) , method: :post,  html:{ class:'form-horizontal',id: 'group-val'} do |f|
          .form-group
            %label.col-md-3.control-label
              Email
              %sup.text-danger *
            .col-md-8
              = email_field_tag :email, nil,class: 'form-control',placeholder: " Email " ,required: true
          .form-group
            %label.col-md-3.control-label
              Note
              %sup.text-danger *
            .col-md-8
              = text_area_tag :note, nil,class: 'form-control',placeholder: " Note ",required: true

          .modal-footer
            = f.button "submit".html_safe , class: 'btn btn-primary btn-sm' , data: {disable_with: ("Submitting...")} ,id: 'form_id'
            %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}
              Cancel
