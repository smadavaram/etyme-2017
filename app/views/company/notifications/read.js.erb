<% if flash[:errors].present? %>
<% flash[:errors].each do |e| %>
flash_error("<%= e %>");
<% end %>
<% end %>
<% if flash[:success].present? %>
flash_success("<%= flash[:success] %>");
<% end %>
$('.support-ticket-content-w').html("<%= j render 'company/users/partials/notification_content', notification: @notification %>");
$('.back-to-index').on('click', function () {
  $('.support-index').removeClass('show-ticket-content');
});
$('.support-ticket').removeClass('active');
$("#<%= @notification.id %>").addClass('active');