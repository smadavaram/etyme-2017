<div id="bank_detail_form">
<div class="content-i">
  <div class="content-box">
    <div class="row">
      <div class="col-sm-12">
        <div class="element-wrapper">
          <div class="element-box-tp">
            <div class="controls-above-table">
              <div class="row mr-1 ml-1">
                <div class="col-sm-6">
                  <%= link_to "Add Bank Detail",'', class: 'btn btn-sm btn-secondary ml-2', 'data-toggle':"modal", 'data-target':"#bank_detail_model"%>
                </div>
                <div class="col-sm-6">
                  <div class="form-inline justify-content-sm-end">
                    <input class="form-control form-control-sm rounded bright" id="jobs_datatable-search" placeholder="Search" type="search"></input>
                  </div>
                </div>
              </div>
            </div>
            <div class="table-responsive">
              <table aria-describedby="datatable_fixed_column_info" class="table text-center table-bordered table-lg table-v2 table-striped data-table-font no-footer" id="jobs_datatable" role="grid" style="width: 100%;" width="100%">
                <thead>
                <tr>
                  <th>Company</th>
                  <th>Bank</th>
                  <th>Balance</th>
                  <th>New Balance</th>
                  <th>Recon Date</th>
                  <th>Un_Identified</th>
                  <th>Current_Identified</th>
                </tr>
                </thead>
                <tbody>
                  <% bank_details.each do |bank| %>
                    <tr>
                      <td>
                        <%= link_to do_ellipsis(bank.company.name,10),'',class: 'data-table-font' %>
                      </td>
                      <td>
                        <%=bank.bank_name%>
                      </td>
                      <td>
                        <%=bank.balance%>
                      </td>
                      <td>
                        <%=bank.new_balance%>
                      </td>
                      <td>
                        <%=bank.recon_date%>
                      </td>
                      <td>
                        <%=bank.unidentified_bal%>
                      </td>
                      <td>
                        <%=bank.current_unidentified_bal%>
                      </td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<%= render 'company/bank_details/new.html.erb'%>                       
                    

