<div id="bank_detail_form">
  <div class="col-sm-12">
    <div class="element-wrapper"style="background-color: #f2f4f8; padding: 20px;">
      <div class="element-actions">
        <%= link_to "Add Bank Detail",'', class: 'btn btn-sm btn-secondary ml-2', 'data-toggle':"modal", 'data-target':"#bank_detail_model"%>
      </div>
      <h6 class="element-header">Bank Details</h6>
      <div class="element-content" style="background-color: #f2f4f8">
        <div class="row">
          <% bank_details.each do |bank| %>
            <div class="col-sm-4 col-xxxl-3">
              <a class="element-box el-tablo" href="#">
                <div class="label"><%=snake_to_words(bank.bank_name)%></div>
                <div class="value bank_balance">
                   $<%= bank.balance %>
                </div>
              </a>
            </div>
          <%end%>
        </div>
        <h3>Transactions</h3>
        <div class="row">
          <div class="col-md-12">
            <table class="table">
              <thead class="thead-light">
              <tr>
                <th>Transaction ID</th>
                <th>Type</th>
                <th>Amount</th>
              </tr>
              </thead>
              <tbody>
              <% current_company.etyme_transactions.all.each do |transaction| %>
              <tr>
                <td><%= transaction.id %></td>
                <td><%= transaction.transaction_type %></td>
                <td><%= transaction.amount %></td>
              </tr>
              <% end %>
              </tbody>
            </table>
            <label for="">Balance: $<%= current_company.etyme_transactions.sum(:amount) %></label>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<%= render 'company/bank_details/new.html.erb'%>                       
      

      
