%fieldset
  .form-group
    %label.col-md-2.control-label
      First Name
      %sup.text-danger *
    .col-md-4
      = e.text_field :first_name , class: 'form-control ' , id: 'fname' , placeholder: "First Name" , required: true
    %label.col-md-2.control-label
      Last Name
      %sup.text-danger *
    .col-md-4
      = e.text_field :last_name , class: 'form-control ' , id: 'lname' , placeholder: "Last Name" , required: true
  .form-group
    %label.col-md-2.control-label
      Email
      %sup.text-danger *
    .col-md-10
      = e.email_field :email , class: 'form-control ' , id: 'email' , placeholder: "email@address.com" , required: true
  .form-group
    %label.col-md-2.control-label
      Roles
      %sup.text-danger *
    .col-md-10
      = e.collection_select :role_ids, current_company.roles, :id, :name, {}, {:class=>"form-control input-lg multi-select2",placeholder: 'Select role(s)' ,:multiple => true, required: true,id:'roles'}
  .form-group
    %label.col-md-2.control-label
      Skills
    .col-md-10
      = e.text_field :skill_list,placeholder: "Add Skills Comma seperated",class: 'form-control', 'data-role'=>'tagsinput',value: e.object.try(:skill_list).join(", ")
      %p.note
        %strong Note:
        Tags are separated with comma
  - if !@consultant.accepted_or_not_invited? && !@consultant.new_record?
    .form-group
      %label.col-md-2.control-label
        Resend Invitation
      .col-md-10
        = e.check_box :resend_invitation , {}, true, false