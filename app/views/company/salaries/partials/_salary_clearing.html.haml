%table.table.table-striped.table-bordered.table-v2.table-lg
  %thead
    %tr
      %th= "<input type='checkbox' name='select_all' id='ts_select_all'>".html_safe
      %th Emp
      %th Contract ID & Title
      %th Sal Cy ID
      %th
      %th Hr
      %th Timesheet
      %th Sal Advances
      %th Perdium/Expenses
      %th Commission
      %th Total
      %th Paid
      %th Actions
  %tbody
    - contract_cycles.each do |cc|
      %tr
        %td{:rowspan => 4}= "<input type='checkbox' id='ts_ids' name='ids[]' value='#{cc.cyclable.id}'>".html_safe if cc.cyclable.processed?
        %td.emp{:rowspan => 4}
          - user = cc.contract.candidate
          =image_tag(user.photo, style: 'width: 60px; height: 60px;', class: 'data-table-image mr-1',title: "#{user.full_name}",alt: image_alt(user) ).html_safe
        %td{:rowspan => 4}= cc.contract.title
        %td{:rowspan => 4}= cc.id

        %td= "Calculation"
        %td= cc.cyclable.total_approve_time
        %td= cc.cyclable.approved_amount
        %td
        %td
        %td
        %td= cc.cyclable.total_amount
        %td
        %td
      %tr
        %td= "Process"
        %td= cc.cyclable.total_approve_time
        %td= cc.cyclable.approved_amount
        %td= cc.cyclable.calculate_advance
        %td
        %td
        %td= cc.cyclable.total_amount
        %td{id:"#{cc.cyclable.id}"}= cc.cyclable.billing_amount
        %td

      %tr
        %td= "Send"
        %td= cc.cyclable.total_approve_time
        %td= cc.cyclable.approved_amount
        %td= cc.cyclable.salary_advance
        %td
        %td
        %td= cc.cyclable.total_amount
        %td{id:"#{cc.cyclable.id}"}= cc.cyclable.billing_amount
        %td

      %tr
        %td= "Settlement"
        %td= cc.cyclable.total_approve_time
        %td= cc.cyclable.approved_amount
        %td= cc.cyclable.salary_advance
        %td= cc.cyclable.contract_expenses
        %td
        %td= cc.cyclable.total_amount
        %td{id:"#{cc.cyclable.id}"}= cc.cyclable.billing_amount
        %td
