      $('a[rel=hover]').popover({
      html: true,
      trigger: 'hover',
      placement: 'top',
      content: function(){return '<img src="'+$(this).data('img') + '" />';}
    });
    $('[data-toggle="tooltip"]').tooltip()

    });
    $("#search-term").on("keypress", function (e) {
        if (e.keyCode == 13) {
           var sval = $('#search-term').val();
           $.get('/dashboard?search_by='+sval);
        }
    });