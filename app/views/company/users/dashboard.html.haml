.col-xs-12.col-sm-7.col-md-7.col-lg-4
  %h1.page-title.txt-color-blueDark
    %i.fa-fw.fa.fa-home
    = "Welcome #{current_user.full_name.titleize} ,"
- if !current_company.locations.present? || !current_company.roles.present?
  .col-xs-12.col-sm-7.col-md-12.col-lg-12.m-t-lg{style: 'margin-top: 20px;'}
    .alert.alert-success.alert-block
      %h4.alert-heading Info!
      %p.margin-top-5
        In order to take full advantage of Etyme, Please take a moment to complete your profile setup.
      %ul.margin-top-5
        -if !current_company.locations.present?
          %li
            Please setup your company locations by
            = link_to 'clicking here ' , company_path(current_company) , target: '_blank'
        -if !current_company.roles.present?
          %li
            Please setup some roles & permissions by
            = link_to 'clicking here ' , roles_path , target: '_blank'
            %br
.col-xs-12
  .col-xs-8
    = render 'company/users/partials/timesheet_graph'
  .col-xs-4
    #wid-id-18.jarviswidget.jarviswidget-color-greenDark{"data-widget-colorbutton" => "false", "data-widget-editbutton" => "false"}
      %header
        %h2
          %strong Prefered
          %i Vendors
      / widget div
      %div
        / widget edit box
        .jarviswidget-editbox
          / This area used as dropdown edit box
        / end widget edit box
        / widget content

        .custom-scroll.table-responsive
          %table.table.table-bordered
            %thead
              %tr
                %th{width:'40%;'}
                  Picture
                %th{width:'60%;'}
                  Company Name
            %tbody
              -current_company.invited_companies.each do |d|
                %tr
                  %td= image_tag show_recipient_picture(d.invited_company.logo) , alt: '', width: '40'
                  %td= d.invited_company.name

  - content_for :scripts do
    :javascript
      // DO NOT REMOVE : GLOBAL FUNCTIONS!

      $(document).ready(function() {

        pageSetUp();

        // PAGE RELATED SCRIPTS
      });