#content
  %section#widget-grid
    - if current_company.hiring_manager? || current_company.vendor?
      .row
        -#.col-sm-12.col-md-8{style: 'margin-left: 15px;'}
          - if @data.present?
            %input.form-control#search-term{placeholder: 'Search by Keywords ...',style: 'width: 96%;margin-bottom: 20px; background-color: white'}
        .col-sm-12.col-md-8
          - if @data.present?
            .col-sm-8.margin-bottom-20
              %input.form-control#search-term.bg-color-white{placeholder: 'Search by Keywords ...',style: ''}
            .col-sm-4.margin-bottom-20
              = select_tag "Select Type", options_for_select([ "Candidates", "Jobs" , "Contacts" ]), include_blank: "All",class: 'form-control bg-color-white' ,id: "show_type",style:''
            %br
            .col-sm-12.col-md-8#dynamic-content{style: "width: 100%;"}
              - @data.each do |d|
                = render "company/users/partials/#{d.class.name.downcase}_show" ,data: d
        .col-sm-12.col-md-4

          .element-box.el-tablo.centered
            .panel-body.status
              .who.clearfix
                %h4 Company Candidates (#{current_company.candidates.count})
              -if current_company.candidates.present?
                .col-sm-12
                  %ul.list-inline.friends-list
                    %br
                    - current_company.candidates.take(30).each do |candidate|
                      %li
                        = link_to image_tag( candidate.try(:photo) ,class:"margin-bottom-5 margin-top-5",alt:image_path('avatars/m_sunny_big.png')) , static_candidate_resume_path(candidate),target: "_blank" , title: candidate.full_name,"data-content" => "Email : #{candidate.email}", "data-placement" => "top",:rel => "hover"

              -else
                .text
                  .font-md.text-center
                    No Candidate in  Company Right now.
          .element-box.el-tablo.centered
            .panel-body.status
              .who.clearfix
                %h4 Company Contacts (#{current_company.invited_companies_contacts.count})
              -if current_company.invited_companies_contacts.present?
                .col-sm-12
                  %ul.list-inline.friends-list
                    %br
                    - current_company.invited_companies_contacts.take(30).each do |contact|
                      %li
                        = link_to (image_tag contact.try(:photo) ,class:"margin-bottom-5 margin-top-5",alt: image_path('avatars/m_sunny_big.png') ), profile_company_path(contact) ,title: contact.full_name ,"data-content" => "Email : #{contact.email}", "data-placement" => "top",:rel => "hover"
              -else
                .text
                  .font-md.text-center
                    No Contact in Company Right now.
          .element-box.el-tablo.centered
            .panel-body.status
              .who.clearfix
                %h4 Company Consultants (#{current_company.consultants.count})
              -if current_company.consultants.present?
                .col-sm-12
                  %ul.list-inline.friends-list
                    %br
                    - current_company.consultants.take(30).each do |consultant|
                      %li
                        = link_to image_tag( consultant.try(:photo) ,class:"margin-bottom-5 margin-top-5",alt: image_path('avatars/m_sunny_big.png') ), company_user_profile_path(consultant),target: "_blank" , title: consultant.full_name,"data-content" => "Email: #{consultant.email}", "data-placement" => "top","data-img"=>"#{consultant.photo}" ,:rel => "hover"
              -else
                .text
                  .font-md.text-center
                    No Consultant in Company Right now.
          .element-box.el-tablo.centered
            .panel-body.status
              .who.clearfix
                %h4 My Vendors (#{current_company.send_or_received_network.count})
              -if current_company.send_or_received_network.present?
                .col-sm-12
                  %ul.list-inline.friends-list
                    %br
                    - current_company.send_or_received_network.take(30).each do |vendor|
                      %li
                        = link_to image_tag( vendor.prefer_vendor.logo ,class:"margin-bottom-5 margin-top-5",alt: ' LOGO ' ), profile_company_path(vendor.prefer_vendor),target: "_blank" , title: vendor.prefer_vendor.name,"data-content" => "Email : #{vendor.try(:prefer_vendor).try(:email)}", "data-placement" => "top",:rel => "hover"
                        -#= image_tag 'https://cdn1.iconfinder.com/data/icons/business-237/65/icons-08-128.png' ,class:"margin-bottom-5 margin-top-5",alt: image_path('avatars/male.png')
              -else
                .text
                  .font-md.text-center
                    No Vendor Right now.
          .element-box.el-tablo.centered
            .panel-body.status
              .who.clearfix
                %h4 Companies 3rd Party (#{current_company.invited_companies.count})
              -if current_company.invited_companies.present?
                .col-sm-12
                  %ul.list-inline.friends-list
                    %br
                    - current_company.invited_companies.take(30).each do |company|
                      %li
                        = link_to image_tag( company.invited_company.logo ,class:"margin-bottom-5 margin-top-5",alt: 'Logo' ), profile_company_path(company.invited_company),target: "_blank", title:company.invited_company.name,"data-content" => "Email : #{company.invited_company.email}", "data-placement" => "top",:rel => "hover"
              -else
                .text
                  .font-md.text-center
                    No Company Right now.



        %hr
    - if current_company.hiring_manager? && !current_user.is_consultant?
      .row
        .col-md-6
          .element-box.el-tablo.centered
            .panel-body.status
              .who.clearfix
                %h4 Company Consultant(s)
              .row
                -if current_company.consultants.present?
