.panel.panel-default
  .panel-body.status.container


    .who.clearfix
      %h6.d-inline-block Company
      = link_to (image_tag data.logo ,class:'',alt: "Logo" ,style: "float:right; width: 60px !important; height: 60px !important;") ,profile_company_path(data.id),title: "#{data.try(:name) } Profile",'data-toggle'=>"tooltip" ,'data-placement'=>"top"

      %span.pull-right.font-xs.text-muted
      -#=user_image(data, style: 'width: 35px; height: 35px;', class: 'data-table-image mr-1',title: "#{data.full_name}" )
      %h6.text-muted.font-weight-bold #{data.name.capitalize}
      -#%h6.text-muted #{data.company ? data.company.name.humanize : ''}
      %span.name.font-sm.text-muted.margin-top-10
        = contact_widget(data&.email, data&.phone,data,chat_link: chat_link(data),color: '#636c71 !important')

      .row
        .col-md-12.margin-top-5
          -#= link_to raw("<i class='fa fa-comment '></i>"), company_company_create_chat_path(data.company),remote: true,method: :get,class: 'btn btn-default btn-xs',title:"Chat with Company  #{d.prefer_vendor.name}",'data-toggle'=>"tooltip" ,'data-placement'=>"top"

          -#= link_to raw("<i class='fa fa-sticky-note '></i>")    ,company_assign_status_path(data.company) ,class: 'btn btn-default btn-xs margin-bottom-5', remote: :true,title:"Assign Status",'data-toggle'=>"tooltip" ,'data-placement'=>"top"
          -#= link_to raw("<i class='fa fa-bell '></i>")    ,company_company_add_reminder_path(data.company)   ,class: 'btn btn-default btn-xs margin-bottom-5', remote: :true ,title:"Remind Me",'data-toggle'=>"tooltip" ,'data-placement'=>"top"
          -#= link_to "Contacts" ,company_contacts_path(data.try(:company)), class: 'btn btn-xs btn-default btn-primary'
          -#= link_to raw("<i class='fa fa-edit '></i>") , edit_company_path(data.company) , class: 'btn btn-xs btn-default  margin-bottom-5',remote: :true ,title:"Edit #{data.company.name}",'data-toggle'=>"tooltip" ,'data-placement'=>"top"
