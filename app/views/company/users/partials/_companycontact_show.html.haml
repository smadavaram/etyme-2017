.panel.panel-default
  .panel-body.status
    %h4.padding-5 Contact
    .who.clearfix
      %span.pull-right.font-xs.text-muted
        %ul.list-inline.friends-list
          %li
            = image_tag 'https://cdn1.iconfinder.com/data/icons/business-237/65/icons-08-128.png',class:'',alt: "job"
      = image_tag data.photo,class:'',alt: "job",width:"100px !important",hieght:"100px !important"
      %h4 #{data.full_name.humanize}
      %h4 #{data.company.name.humanize}
      %span.name.font-sm.text-muted.margin-top-10
        Email: #{data.email}
      .row
        .col-md-3.margin-top-5
          = link_to raw("<i class='fa fa-sticky-note '></i>")    ,company_assign_status_path(data.company) ,class: 'btn  btn-xs margin-bottom-5', remote: :true,title:"Assign Status"
          = link_to raw("<i class='fa fa-bell '></i>")    ,company_company_add_reminder_path(data.company)   ,class: 'btn  btn-xs margin-bottom-5', remote: :true ,title:"Remind Me"
          -#= link_to "Contacts" ,company_contacts_path(data.try(:company)), class: 'btn btn-xs btn-default btn-primary'
          = link_to raw("<i class='fa fa-edit '></i>") , edit_company_path(data.company) , class: 'btn btn-xs btn-default  margin-bottom-5',remote: :true ,title:"Edit #{data.company.name}"
