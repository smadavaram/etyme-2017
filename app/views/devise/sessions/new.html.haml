
.row
  .col-sm-12
    %br/
    %br/
    %br/
    %br/
    .row
      .col-md-6.col-sm-12
        .row
          .col-md-11.col-sm-12
            .well
              %h2 Sign in
              %p If you have an account with us, please log in.
              = form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: 'login-form', class: 'client-form',role:'form'}) do |f|
                .form-group
                  %label Email address
                  = f.email_field :email, autofocus: true,class:'form-control',placeholder:"Enter Email"
                -#%input.form-control{:placeholder => "Enter email", :type => "email"}/
                .form-group
                  %label Password
                  = f.password_field :password, autocomplete: "off",class:'form-control',placeholder:"Enter password"
                .checkbox
                  %label Remember me
                  = f.check_box :remember_me
                -#.form-group
                -#  = link_to 'Forgot password?', new_candidate_password_path
                %br/
                = f.submit 'Sign In',class:'btn btn-primary'
      .col-md-6.col-sm-12
        .well
          %h2 Forgot Password?
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: {id: 'login-form', class: 'smart-form client-form',method: :post }) do |f|
            = devise_error_messages!
            %fieldset
              .form-group
                %label Enter your email address
                = f.email_field :email, autofocus: true,class: 'form-control',palceholder: "Email Address"
                %br
            %footer
              %button.btn.btn-primary{:type => "submit"}
                %i.fa.fa-refresh
                Reset Password

- content_for :scripts do
  :javascript
    // runAllForms();
    $(function() {
      // Validation
      $("#login-form").validate({
        // Rules for form validation
        rules : {
          email : {
            required : true,
            email : true
          },
          password : {
            required : true,
            minlength : 3,
            maxlength : 20
          }
        },

        // Messages for form validation
        messages : {
          email : {
            required : 'Please enter your email address',
            email : 'Please enter a VALID email address'
          },
          password : {
            required : 'Please enter your password'
          }
        },

        // Do not change code below
        errorPlacement : function(error, element) {
          error.insertAfter(element.parent());
        }
      });
    });
